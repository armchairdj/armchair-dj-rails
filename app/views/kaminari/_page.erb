<% classes = ["page", ("current" if page.current?)].compact.join(" ") %>

<%= content_tag(:li, class: classes) do %>
  <% if page.current? %>
    <%= link_to page, "#" %>
  <% else %>
    <%= link_to_unless page.current?, page, url, { :remote => remote, :rel => page.next? ? 'next' : page.prev? ? 'prev' : nil } %>
  <% end %>
<% end %>
