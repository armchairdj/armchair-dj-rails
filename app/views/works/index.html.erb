<%
  @headline = @title = "Works"
%>

<% content_for(:before_page_headline) do %>
  <%= create_link(Work) %>
<% end %>

<%= content_tag(:table) do %>
  <%= content_tag(:thead) do %>
    <%= content_tag(:tr) do %>
      <%= content_tag :th, "Name" %>
      <%= content_tag :th, "Creators" %>
      <%= content_tag :th, "Actions", class: "right" %>
    <% end %>
  <% end %>
  <%= content_tag(:tbody) do %>
    <% @works.each do |work| %>
      <%= content_tag(:tr) do %>
        <%= content_tag :td, link_to(work.title, work) %>
        <%= content_tag :td do %>
          <% work.creators.each do |creator| %>
            <%= link_to(creator.name, creator) %>
          <% end %>
        <% end %>
        <%= content_tag :td, class: "right" do %>
          <%= edit_link(work) %>
          <%= destroy_link(work) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
