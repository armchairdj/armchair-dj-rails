<%
  @title = [@work.credited_artists, @work.title]
%>

<%= content_for(:header) do %>
  <%= content_tag(:header, class: "post-header") do %>
    <%= content_tag(:h3, @work.medium.name) %>
    <%= content_tag(:h1) do %>
      <%= content_tag(:span, @work.credited_artists, class: "creators") %>
      <%= content_tag(:span, @work.title,            class: "title"   ) %>
      <%= content_tag(:span, @work.subtitle,         class: "subtitle") %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "shared/playback/contributions", locals: {
  contributions: @work.contributions.for_site,
  context:       :work
} %>

<%= render partial: "shared/playback/categories", locals: {
  categories: @work.tags_by_category
} %>

<%= render partial: "shared/playback/links", locals: {
  links: @work.links
} %>

<%= render partial: "shared/playback/articles", locals: {
  articles: @work.articles.for_site
} %>
