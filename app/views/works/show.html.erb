<%
  @title = [@work.display_creators, @work.title]

  @contributions = @work.contributions.for_site
  @posts         = @work.posts.for_site
%>

<%= content_for(:header) do %>
  <%= content_tag(:header, class: "post-header") do %>
    <%= content_tag(:h3, @work.medium.name) %>
    <%= content_tag(:h1) do %>
      <%= content_tag(:span, @work.display_creators, class: "creators") %>
      <%= content_tag(:span, @work.title,            class: "title"   ) %>
      <%= content_tag(:span, @work.subtitle,         class: "subtitle") %>
    <% end %>
  <% end %>
<% end %>

<% if @contributions.any? %>
  <%= content_tag(:section) do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Contributors") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "works/contribution", collection: @contributions %>
    <% end %>
  <% end %>
<% end %>

<% if @posts.any? %>
  <%= content_tag(:section) do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Posts") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "posts/post", collection: @posts %>
    <% end %>
  <% end %>
<% end %>
