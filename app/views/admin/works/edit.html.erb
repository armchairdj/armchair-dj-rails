<%
  @title = [
    "Update #{@work.human_medium}",
    @work.display_creators,
    @work.title
  ]
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :edit,
  headline:    @title.first,
  instance:    @work,
  public_link: admin_public_work_link(@work)
} %>

<%= render partial: "work_form", locals: {
  work:     @work,
  roles:    @roles,
  creators: @creators
} %>
