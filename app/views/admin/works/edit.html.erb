<%
  @title = [
    "Edit #{@work.human_medium}",
    @work.display_creator,
    @work.title
  ]
%>

<%= content_tag(:header, class: 'admin') do %>
  <%= content_tag(:h1, @title.first) %>

  <%= content_tag(:div, class: 'actions') do %>
    <%= admin_destroy_link(@work) %>
  <% end %>
<% end %>

<%= render partial: 'work_form', locals: {
  work:     @work,
  roles:    @roles,
  creators: @creators
} %>
