<%
  @title = [
    "Update #{@work.medium.name}",
    @work.display_creators,
    @work.title
  ]
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :edit,
  headline:    @title.first,
  instance:    @work,
  public_link: admin_public_work_link(@work)
} %>

<%= render partial: "form", locals: {
  work:          @work,
  media:         @media,
  roles:         @roles,
  creators:      @creators,
  category_tags: @category_tags,
} %>
