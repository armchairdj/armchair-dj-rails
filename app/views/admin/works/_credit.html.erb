<%= f.simple_fields_for :credits, credit do |ff| %>
  <%= content_tag(:fieldset, class: "accepts-nested", "data-target": "expandable-fieldset.field") do %>
    <%= ff.input :creator_id,
      as:            :select,
      label:         false,
      collection:    creators,
      required:      false,
      include_blank: :translate,
      input_html:    js_selectabe_create_creator_attrs
