<%
  @title = "Create Work"
%>

<%= admin_header(@model_class, :new,
  h1: @title
) %>

<% if @work.type.blank? %>
  <%= render partial: "form_medium_only", locals: {
    work:  @work,
    media: @media,
  } %>

<% else %>
  <%= render partial: "form", locals: {
    work:       @work,
    categories: @categories,
    creators:   @creators,
    media:      @media,
    roles:      @roles,
    works:      @works,
  } %>
<% end %>
