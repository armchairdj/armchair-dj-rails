<%
  @title = "Create Work"
%>

<%= admin_header(@model_class, :new,
  h1: @title
) %>

<% if @work.type.blank? %>
  <%= render partial: "form_medium_only", locals: {
    work:  @work,
    types: @types,
  } %>

<% else %>
  <%= render partial: "form", locals: {
    work:       @work,
    creators:   @creators,
    types:      @types,
    roles:      @roles,
    works:      @works,
  } %>
<% end %>
