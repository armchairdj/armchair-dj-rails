<%
  @title = "Create Work"
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:   :new,
  headline: @title
} %>

<% if @work.medium_id.blank? %>
  <%= render partial: "form_medium_only", locals: {
    work:  @work,
    media: @media,
  } %>

<% else %>
  <%= render partial: "form", locals: {
    work:       @work,
    categories: @categories,
    creators:   @creators,
    media:      @media,
    roles:      @roles,
    works:      @works,
  } %>
<% end %>
