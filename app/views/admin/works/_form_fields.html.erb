<% show_contributors = true if local_assigns[:show_contributors].nil? %>
<% show_summary      = true if local_assigns[:show_summary     ].nil? %>
<% show_tags         = true if local_assigns[:show_tags        ].nil? %>
<% show_tags         = false unless f.object.persisted? %>

<%= content_tag(:fieldset, "data-controller": "work-dropdowns") do %>
  <%= render(partial: "admin/works/credit_fieldset", locals: {
    f:        f,
    creators: creators
  }) %>

  <%= content_tag(:div, class: "boxed") do %>
    <%= f.input :medium_id, as: :select,
      collection: media,
      input_html: {
        # "data-controller": "selectize",
        "data-target":     "work-dropdowns.medium"
      }
    %>

    <%= f.input :title %>

    <%= f.input :subtitle, required: false, hint: true, placeholder: true %>

    <%= f.input(:summary, required: false, hint: true) if show_summary %>
  <% end %>

  <%= render(partial: "admin/works/contribution_fieldset", locals: {
    f:        f,
    creators: creators,
    roles:    roles
  }) if show_contributors %>

  <%= render(partial: "admin/works/category_fieldset", locals: {
    f:          f,
    categories: categories
  }) if show_tags %>
<% end %>
