<% show_all = true if local_assigns[:show_all].nil? %>

<%= content_tag(:fieldset) do %>
  <%= content_tag(:div, class: "boxed") do %>
    <% if f.object.persisted? %>
      <%= f.input :medium_id, as: :select, collection: media, disabled: true %>
    <% else %>
      <%= f.input :medium_id, as: :select, collection: media, input_html: {
        "data-controller": "selectable",
        "data-target":     "auto-submittable.field"
      } %>
    <% end %>

    <%= f.input :title %>

    <%= f.input :subtitle, required: false, hint: true, placeholder: true %>

    <% if show_all %>
      <%= f.input :parent_id, as: :grouped_select,
        collection:         works,
        selected:           f.object.parent_id,
        required:           false,
        group_label_method: :first,
        group_method:       :last,
        label_method:       :full_display_title,
        value_method:       :id,
        include_blank:      :translate,
        input_html:         { "data-controller": "selectable" }
      %>
    <% end %>
  <% end %>

  <%= render(partial: "admin/shared/forms/credit_fieldset", locals: {
    f:        f,
    creators: creators
  }) %>

  <% if show_all %>
    <%= render(partial: "admin/shared/forms/contribution_fieldset", locals: {
      f:        f,
      creators: creators,
      roles:    roles
    }) %>

    <%= render(partial: "admin/shared/forms/category_fieldset", locals: {
      f:          f,
      categories: categories
    }) %>

    <%= render partial: "admin/shared/forms/link_fieldset", locals: {
      f: f
    } %>

    <%= render partial: "admin/shared/forms/displayable_fieldset", locals: {
      f: f
    } %>
  <% end %>
<% end %>
