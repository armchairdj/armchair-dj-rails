<%= f.simple_fields_for :milestones, milestone do |ff| %>
  <%= expandable_fieldset do %>
    <%= content_tag(:div, class: "activity-year") do %>
      <%= ff.input :activity,
        as:            :select,
        include_blank: :translate,
        collection:    Milestone.human_activities,
        input_html:    { "data-controller": "selectable" }
      %>

      <%= ff.input :year %>

      <%= ff.input(:_destroy, as: :boolean) unless ff.object.new_record? %>
    <% end %>
  <% end %>
<% end %>
