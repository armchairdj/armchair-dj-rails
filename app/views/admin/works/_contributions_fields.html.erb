<%
  records = f.object.contributions
  error   = f.error(:contributions)
  classes = join_attr("legendary", "fields-for", ("fieldset-with-errors" if error))
%>

<%= content_tag(:fieldset, class: classes, "data-controller": "expandable-has-many") do %>
  <%= content_tag(:legend) do %>Contributors <%= required_indicator %><% end %>

  <%= content_tag(:div, error, class: "hint") if error %>

  <%= render partial: "admin/works/contribution_field", collection: records, as: :contribution, locals: {
    f:        f,
    roles:    roles,
    creators: creators
  } %>
<% end %>
