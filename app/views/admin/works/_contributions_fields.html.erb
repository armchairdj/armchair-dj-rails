<%
  errored = f.object.errors[:contributions].any?
  classes = join_attr("legendary", "fields-for", ("fieldset-with-errors" if errored))
  hint    = f.error(:contributions) || "Select up to 20."
%>

<%= content_tag(:fieldset, class: classes, "data-controller": "expandable-has-many") do %>
  <%= content_tag(:legend) do %>Contributors <%= required_indicator %><% end %>

  <%= content_tag(:div, hint, class: "hint") %>

  <%= render partial: "admin/works/contribution_field",
    collection: f.object.contributions, as: :contribution, locals: {
      f:        f,
      roles:    roles,
      creators: creators
    }
  %>
<% end %>
