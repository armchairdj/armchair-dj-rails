<%
  @title = ["View #{@work.medium.name}", @work.display_creators, @work.title]
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :show,
  headline:    @title.first,
  instance:    @work,
  public_link: admin_public_work_link(@work)
} %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Medium") %>
        <%= content_tag(:td, @work.medium.name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Creators") %>
        <%= content_tag(:td) do %>
          <%= content_tag(:ul) do %>
            <%= render partial: "admin/shared/playback/creator", collection: @work.creators %>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @work.title) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Subtitle") %>
        <%= content_tag(:td, @work.subtitle) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@work.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Viewable Posts") %>
        <%= content_tag(:td, @work.viewable_post_count) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Non-Viewable Posts") %>
        <%= content_tag(:td, @work.non_viewable_post_count) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@work.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@work.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @work.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "admin/shared/playback/categories", locals: {
  categories: @work.tags_by_category
} %>

<%= render partial: "admin/shared/playback/contributions", locals: {
  contributions: @work.contributions.for_admin.alpha,
  context:       :work
} %>

<%= render partial: "admin/shared/playback/posts", locals: {
  posts: @work.posts.for_admin.reverse_cron
} %>
