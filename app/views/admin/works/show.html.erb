<%
  @title = ["View #{@work.human_medium}", @work.display_creator, @work.title]
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :show,
  headline:    @title.first,
  instance:    @work,
  public_link: admin_public_work_link(@work)
} %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Medium") %>
        <%= content_tag(:td, @work.human_medium) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @work.title) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Creators") %>
        <%= content_tag(:td, links_to_creators_for_work(@work, admin: true)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Contributors") %>
        <%= content_tag(:td) do %>
          <% @work.contributions.secondary.each do |contribution| %>
            <%= link_to_creator(contribution.creator, admin: true) %>:
            <%= contribution.human_role %><br>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@work.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@work.updated_at)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
