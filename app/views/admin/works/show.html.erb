<%
  @title = ["View #{@work.human_medium}", @work.display_creators, @work.title]

  @creators      = @work.creators.for_admin.alphabetical
  @contributions = @work.contributions.for_admin.alphabetical
  @posts         = @work.posts.for_admin.reverse_cron
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :show,
  headline:    @title.first,
  instance:    @work,
  public_link: admin_public_work_link(@work)
} %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Medium") %>
        <%= content_tag(:td, @work.human_medium) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Creators") %>
        <%= content_tag(:td) do %>
          <% if @creators.any? %>
            <%= content_tag(:ul) do %>
              <%= render partial: "admin/creators/creator", collection: @creators %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @work.title) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Subtitle") %>
        <%= content_tag(:td, @work.subtitle) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@work.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@work.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@work.updated_at)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if @contributions.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Contributors") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "admin/works/contribution", collection: @contributions %>
    <% end %>
  <% end %>
<% end %>

<% if @posts.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Posts") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "admin/posts/post", collection: @posts %>
    <% end %>
  <% end %>
<% end %>
