<%
  @title = ["View #{@work.true_human_model_name}", @work.credited_artists, @work.title]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @work,
) %>

<%= content_tag(:section, class: "admin-section tabled") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Medium") %>
        <%= content_tag(:td, @work.true_human_model_name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Creators") %>
        <%= content_tag(:td) do %>
          <%= content_tag(:ul) do %>
            <%= render partial: "admin/shared/playback/creator", collection: @work.creators %>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Parent") %>
        <%= content_tag(:td, @work.parent.try(:display_title)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @work.title) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Subtitle") %>
        <%= content_tag(:td, @work.subtitle) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@work.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@work.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @work.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "admin/shared/playback/contributions", locals: {
  contributions: @work.contributions.for_admin.alpha,
  context:       :work
} %>

<%= render partial: "admin/shared/playback/posts", locals: {
  posts: @work.reviews.for_admin.reverse_cron
} %>

<%= render partial: "admin/shared/playback/playlists", locals: {
  playlists: @work.playlists.for_admin.alpha
} %>
