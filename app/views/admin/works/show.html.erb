<%
  @title = ["View #{@work.true_human_model_name}", @work.credited_artists, @work.title]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @work,
) %>

<%= admin_section("Attributes", class: "tabled") do %>
  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "ID") %>
        <%= content_tag(:td, @work.id) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Medium") %>
        <%= content_tag(:td, @work.true_human_model_name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @work.title) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Subtitle") %>
        <%= content_tag(:td, @work.subtitle) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Creators") %>
        <%= content_tag(:td) do %>
          <%= content_tag(:ul) do %>
            <% @work.creators.each do |creator| %>
              <%= content_tag(:li, link_to_creator(creator)) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <% @work.display_milestones.each do |milestone| %>
        <%= content_tag(:tr) do %>
          <%= content_tag(:th, milestone.human_activity) %>
          <%= content_tag(:td, milestone.year) %>
        <% end %>
      <% end %>

      <% @work.display_aspects.each do |facet_name, val_array| %>
        <%= content_tag(:tr) do %>
          <%= content_tag(:th, facet_name          ) %>
          <%= content_tag(:td, val_array.map(&:name).join(", ")) %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@work.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@work.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @work.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if (contributions = ).any? %>
  <%= admin_section("Contributors") do %>
    <%= content_tag(:dl, class: "horizontal right") do %>
      <% contributions.each do |contribution| %>
        <%= content_tag(:dt, contribution.name                    ) %>
        <%= content_tag(:dd, link_to_creator(contribution.creator)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "admin/posts/list",     as: "posts"      object: @work.reviews.for_admin.reverse_cron %>
<%= render partial: "admin/playlists/list", as: "playlists", object: @work.playlists.for_admin.alpha %>
