<%
  @title = "Works"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@works),
  h1: @title
) %>

<%= render "shared/admin/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @works,
  columns: [
    { name: "ID",     method: :id                    },
    { name: "Medium", method: :true_human_model_name },
    { name: "Title",  method: :title                 },
    { name: "Makers", method: :display_makers        },
  ]
%>
