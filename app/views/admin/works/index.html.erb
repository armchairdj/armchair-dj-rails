<%
  @title = "Works"
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:   :index,
  headline: @title,
  prehead:  total_count_for(@works)
} %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "admin/shared/index_tabs", locals: { model: Work } %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @works.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= content_tag(:th, "Medium") if @scope == :for_admin %>
            <%= content_tag(:th, "Title") %>
            <%= content_tag(:th, "Creators") %>
            <%= content_tag(:th, post_count_column_header,  class: "icon") %>
            <%= content_tag(:th, draft_count_column_header, class: "icon") %>
            <%= content_tag(:th, "Actions", class: "actions") %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @works.each do |work| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, work.medium.name) if @scope == :for_admin %>
              <%= content_tag(:td, work.title) %>
              <%= content_tag(:td, work.display_creators) %>
              <%= content_tag(:td, work.viewable_post_count,     class: "icon") %>
              <%= content_tag(:td, work.non_viewable_post_count, class: "icon") %>
              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_work_link(work) %>
                <%= admin_view_link(work) %>
                <%= admin_update_link(work) %>
                <%= admin_destroy_link(work) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= paginate @works %>
  <% end %>
<% end %>
