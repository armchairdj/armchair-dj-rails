<%
  @title = "Works"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@works),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scopes) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @works.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_link @sorts, "ID"      %>
            <%= sortable_link @sorts, "Medium"  %>
            <%= sortable_link @sorts, "Title"   %>
            <%= sortable_link @sorts, "Creator" %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @works.each do |work| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td) do %>
                <%= sortable_link @sorts, "ID", tag: :span, class: "identifier" %>
                <%= work.id %>
              <% end %>

              <%= content_tag(:td) do %>
                <%= sortable_link @sorts, "Medium", tag: :span, class: "identifier" %>
                <%= work.true_human_model_name %>
              <% end %>

              <%= content_tag(:td) do %>
                <%= sortable_link @sorts, "Title", tag: :span, class: "identifier" %>
                <%= work.title %>
              <% end %>

              <%= content_tag(:td) do %>
                <%= sortable_link @sorts, "Creator", tag: :span, class: "identifier" %>
                <%= work.display_makers %>
              <% end %>

              <%= admin_actions_cell(work) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= paginate @works %>
  <% end %>
<% end %>
