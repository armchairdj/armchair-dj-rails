<%
  @title = "Works"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@works),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scopes) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @works.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th @sorts, "Medium"  %>
            <%= sortable_th @sorts, "Title"   %>
            <%= sortable_th @sorts, "Creator" %>
            <%= sortable_th @sorts, "VPC",  text: vpc_icon,  class: "icon"  %>
            <%= sortable_th @sorts, "NVPC", text: nvpc_icon, class: "icon" %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @works.each do |work| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, work.medium.name     ) %>
              <%= content_tag(:td, work.title           ) %>
              <%= content_tag(:td, work.credited_artists) %>

              <%= content_tag(:td, work.viewable_post_count,     class: "icon") %>
              <%= content_tag(:td, work.unviewable_post_count, class: "icon") %>

              <%= admin_actions_cell(work) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= paginate @works %>
  <% end %>
<% end %>
