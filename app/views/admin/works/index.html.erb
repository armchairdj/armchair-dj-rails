<%
  @title = "Works"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@works),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scope, @model_class) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @works.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th Work, "Medium",   @sort %>
            <%= sortable_th Work, "Title",    @sort %>
            <%= sortable_th Work, "Creators", @sort %>

            <%= vpc_th  Work, "VPC",  @sort %>
            <%= nvpc_th Work, "NVPC", @sort %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @works.each do |work| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, work.medium.name     ) %>
              <%= content_tag(:td, work.title           ) %>
              <%= content_tag(:td, work.display_creators) %>

              <%= vpc_cell( work) %>
              <%= nvpc_cell(work) %>

              <%= admin_actions(work) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= paginate @works %>
  <% end %>
<% end %>
