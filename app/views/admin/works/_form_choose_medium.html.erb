<%= simple_form_for([:admin, @work], html: { class: "admin", "data-controller": "auto-submittable" }) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:section, class: "adj-module") do %>
      <%= content_tag(:fieldset, class: "lengendary") do %>
        <%= content_tag(:legend, "Basics") %>

        <%= f.input :type, as: :select,
          collection: @types,
          hint:       "First, choose a type.",
          input_html: {
            "data-controller": "selectable",
            "data-target":     "auto-submittable.field"
          }
        %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button(:button, "Continue", type: :submit,
      name: "step", value: "select_work_type",
      "data-target": "auto-submittable.button"
    ) %>
  <% end %>
<% end %>
