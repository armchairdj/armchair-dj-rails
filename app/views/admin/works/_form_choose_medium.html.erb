<%= simple_form_for([:admin, @work], html: { class: "admin", "data-controller": "autosubmit" }) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:section, class: "adj-module") do %>
      <%= content_tag(:fieldset) do %>
        <%= f.input :medium, as: :select,
          collection: @media,
          input_html: {
            "data-controller": "selectable",
            "data-target":     "autosubmit.field"
          }
        %>
      <% end %>
    <% end %>
  <% end %>

  <%= button_group do %>
    <%= submit_button(@work, "Continue",
      name:          "step",
      value:         "select_medium",
      "data-target": "autosubmit.button"
    ) %>
  <% end %>
<% end %>
