<%
  @title = ["View User", @user.display_name ]

  @posts    = @user.posts.for_admin.reverse_cron
  @works    = @user.works.for_admin.alphabetical
  @creators = @user.creators.for_admin.alphabetical
  @bio      = @user.bio
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :show,
  headline:    @title.first,
  instance:    @user,
  public_link: nil
} %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Role") %>
        <%= content_tag(:td, @user.human_role) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Name") %>
        <%= content_tag(:td, @user.display_name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Username") %>
        <%= content_tag(:td, @user.username) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Email") %>
        <%= content_tag(:td, @user.email) %>
      <% end %>

      <% if @user.can_contribute? %>
        <%= content_tag(:tr) do %>
          <%= content_tag(:th, "Bio") %>
          <%= content_tag(:td, paragraphs(@bio)) %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@user.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@user.updated_at)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Account Status") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Confirmed") %>
        <%= content_tag(:td, admin_date(@user.confirmed_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Confirmation Sent") %>
        <%= content_tag(:td, admin_date(@user.confirmation_sent_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Password Reset Sent") %>
        <%= content_tag(:td, admin_date(@user.reset_password_sent_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Locked") %>
        <%= content_tag(:td, admin_date(@user.locked_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Unconfirmed Email") %>
        <%= content_tag(:td, @user.unconfirmed_email) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Logins") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Logins") %>
        <%= content_tag(:td, @user.sign_in_count) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Failed Attempts") %>
        <%= content_tag(:td, @user.failed_attempts) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Current Login") %>
        <%= content_tag(:td, admin_date(@user.current_sign_in_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Current Login IP") %>
        <%= content_tag(:td, @user.current_sign_in_ip) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Last Login") %>
        <%= content_tag(:td, admin_date(@user.last_sign_in_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Last Login IP") %>
        <%= content_tag(:td, @user.last_sign_in_ip) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Remember Me") %>
        <%= content_tag(:td, admin_date(@user.remember_created_at)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if @user.can_contribute? %>
  <% if @posts.any? %>
    <%= content_tag(:section, class: "admin-section") do %>
      <%= content_tag(:header) do %>
        <%= content_tag(:h4, "Posts") %>
      <% end %>

      <%= content_tag(:dl, class: "horizontal right") do %>
        <%= render partial: "admin/posts/post", collection: @posts %>
      <% end %>
    <% end %>
  <% end %>

  <% if @works.any? %>
    <%= content_tag(:section, class: "admin-section") do %>
      <%= content_tag(:header) do %>
        <%= content_tag(:h4, "Works Written About") %>
      <% end %>

      <%= content_tag(:dl, class: "horizontal right") do %>
        <%= render partial: "admin/works/work", collection: @works %>
      <% end %>
    <% end %>
  <% end %>

  <% if @creators.any? %>
    <%= content_tag(:section, class: "admin-section") do %>
      <%= content_tag(:header) do %>
        <%= content_tag(:h4, "Creators Written About") %>
      <% end %>

      <%= content_tag(:ul, class: "square") do %>
        <%= render partial: "admin/creators/creator", collection: @creators %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
