<%
  @title = "Users"
%>

<%= render "admin/shared/header", action: :index,
  prehead:  total_count_for(@users),
  headline: @title
%>

<%= render "admin/shared/index",
  collection: @collection,
  records: @users,
  columns: [
    { name: "ID",        method: :id           },
    { name: "Name",      method: :display_name },
    { name: "Username",  method: :username     },
    # { name: "Email",     method: :email        },
    { name: "Role",      method: :human_role   },
  ]
%>
