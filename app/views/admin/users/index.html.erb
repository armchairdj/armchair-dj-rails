<%
  @title = "Users"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@users),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scope, @model_class) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @users.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th User, "Name",     @sort %>
            <%= sortable_th User, "Username", @sort %>
            <%= sortable_th User, "Email",    @sort %>
            <%= sortable_th User, "Role",     @sort %>

            <%= vpc_th  User, "VPC",  @sort %>
            <%= nvpc_th User, "NVPC", @sort %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @users.each do |user| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, user.display_name) %>
              <%= content_tag(:td, user.username    ) %>
              <%= content_tag(:td, user.email       ) %>
              <%= content_tag(:td, user.human_role  ) %>

              <%= vpc_cell( user) %>
              <%= nvpc_cell(user) %>

              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_user_link(user) %>
                <%= admin_view_link(       user) %>
                <%= admin_update_link(     user) %>
                <%= admin_destroy_link(    user) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @users %>
    <% end %>
  <% end %>
<% end %>
