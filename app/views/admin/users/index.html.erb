<%
  @title = "Users"
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:   :index,
  headline: @title,
  prehead:  total_count_for(@users)
} %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "admin/shared/index_tabs", locals: { model: User } %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @users.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= content_tag(:th, "Name") %>
            <%= content_tag(:th, "Username") %>
            <%= content_tag(:th, "Email") %>
            <%= content_tag(:th, post_count_column_header,  class: "icon") %>
            <%= content_tag(:th, draft_count_column_header, class: "icon") %>
            <%= content_tag(:th, "Actions", class: "actions") %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @users.each do |user| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, user.display_name) %>
              <%= content_tag(:td, user.username) %>
              <%= content_tag(:td, user.email) %>
              <%= content_tag(:td, user.viewable_post_count,     class: "icon") %>
              <%= content_tag(:td, user.non_viewable_post_count, class: "icon") %>
              <%= content_tag(:td, class: "actions") do %>
                <%= admin_view_link(user) %>
                <%= admin_update_link(user) %>
                <%= admin_destroy_link(user) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @users %>
    <% end %>
  <% end %>
<% end %>
