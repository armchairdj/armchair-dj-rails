<%
  @title = "Users"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@users),
  h1: @title
) %>

<%= render "admin/shared/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @users,
  columns: [
    { name: "ID",        method: :id           },
    { name: "Name",      method: :display_name },
    { name: "Username",  method: :username     },
    # { name: "Email",     method: :email        },
    { name: "Role",      method: :human_role   },
  ]
%>
