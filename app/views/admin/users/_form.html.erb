<%= simple_form_for([:admin, @user], html: { class: "admin"}) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= render "admin/users/form_fields",
      f:             f,
      roles:         @roles,
      show_bio:      true,
      show_links:    true,
      show_password: @user.new_record?,
      show_role:     true
    %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= admin_submit_button(f) %>
  <% end %>
<% end %>
