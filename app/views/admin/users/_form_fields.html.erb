<%= content_tag(:section, class: "adj-module") do %>
  <%= content_tag(:fieldset, class: "name legendary") do %>
    <%= content_tag(:legend, "Name") %>

    <%= f.input(:first_name) %>
    <%= f.input(:middle_name, required: false) %>
    <%= f.input(:last_name) %>
  <% end %>
<% end %>

<%= content_tag(:section, class: "adj-module") do %>
  <%= content_tag(:fieldset, class: "legendary") do %>
    <%= content_tag(:legend, "Account") %>

    <% if show_role && f.object != current_user %>
      <%= f.input(:role,
        as:            :select,
        collection:    roles,
        include_blank: :translate,
        input_html:    { "data-controller": "selectable" }
      ) %>
    <% end %>

    <%= f.input(:username, required: true) %>

    <%= f.input(:email, required: true, placeholder: true) %>

    <% if show_password %>
      <%= f.input(:password, required: true, hint: true) %>
    <% end %>

    <% if show_bio %>
      <%= f.input(:bio, hint: true) %>
    <% end %>
  <% end %>
<% end %>

<% if show_links %>
  <%= render partial: "admin/shared/forms/fieldset_links", locals: { f: f } %>
<% end %>
