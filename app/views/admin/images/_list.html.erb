<%= admin_section(headline: "Images") do %>
  <%= content_tag(:dl, class: "horizontal right") do %>
    <%= content_tag(:dt, "Hero Image") %>

    <% if imageable.hero_image.attached? %>
      <%= content_tag(:dd, image_tag(
        imageable.hero_image.variant(resize: "200x200")
      )) %>
    <% else %>
      <%= content_tag(:dd, "No hero image") %>
    <% end %>

    <%= content_tag(:dt, "Additional Images") %>

    <% if imageable.additional_images.attached? %>
      <% imageable.additional_images.each do |image| %>
        <%= content_tag(:dd, image_tag(image.variant(resize: "200x200"))) %>
      <% end %>
    <% else %>
      <%= content_tag(:dd, "No additional images") %>
    <% end %>
  <% end %>
<% end %>
