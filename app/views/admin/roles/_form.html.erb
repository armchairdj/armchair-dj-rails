<%= simple_form_for([:admin, role], html: { class: "admin"}) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= render partial: "admin/roles/form_fields", locals: {
      f:     f,
      media: media,
    } %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= admin_submit_button(f) %>
  <% end %>
<% end %>
