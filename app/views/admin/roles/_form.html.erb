<%= simple_form_for([:admin, @role], html: { class: "admin"}) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:section, class: "adj-module") do %>
      <%= content_tag(:fieldset) do %>
        <%= f.input :medium,
          as:            :select,
          collection:    @media,
          required:      true,
          include_blank: :translate,
          input_html:    { "data-controller": "selectable" }
        %>

        <%= f.input :name %>
      <% end %>
    <% end %>
  <% end %>

  <%= button_group submit_button(@role) %>
<% end %>
