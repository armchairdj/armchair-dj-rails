<%
  @title = ["View Role", @role.work_type, @role.name]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @role,
) %>

<%= content_tag(:section, class: "admin-section tabled") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "ID") %>
        <%= content_tag(:td, @role.id) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Medium") %>
        <%= content_tag(:td, @role.work_type) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Name") %>
        <%= content_tag(:td, @role.name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@role.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@role.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @role.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
