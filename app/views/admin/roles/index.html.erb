<%
  @title = "Roles"
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:   :index,
  headline: @title,
  prehead:  pluralize(@roles.total_count, "Total Record")
} %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "admin/shared/index_tabs", locals: { model: Role } %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @roles.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= content_tag(:th, "Medium") %>
            <%= content_tag(:th, "Name") %>
            <%= content_tag(:th, "Actions", class: "actions") %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @roles.each do |role| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, role.medium.name) %>
              <%= content_tag(:td, role.name) %>
              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_role_link(role) %>
                <%= admin_view_link(role) %>
                <%= admin_update_link(role) %>
                <%= admin_destroy_link(role) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @roles %>
    <% end %>
  <% end %>
<% end %>
