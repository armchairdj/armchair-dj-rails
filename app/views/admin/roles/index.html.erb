<%
  @title = "Roles"
%>

<%= render "admin/shared/header", action: :index,
  prehead:  @collection.display_count,
  headline: @title
%>

<%= render "admin/shared/index",
  collection: @collection,
  records: @roles,
  columns: [
    { name: "ID",     method: :id, class: "nowrap" },
    { name: "Medium", method: :display_medium },
    { name: "Name",   method: :name },
  ]
%>
