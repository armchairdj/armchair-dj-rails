<%
  @title = "Roles"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@roles),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scopes) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @roles.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th @sorts, "Work Type" %>
            <%= sortable_th @sorts, "Name"   %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @roles.each do |role| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, role.work_type) %>
              <%= content_tag(:td, role.name       ) %>

              <%= content_tag(:td, class: "actions") do %>
                <%= admin_view_link(   role) %>
                <%= admin_update_link( role) %>
                <%= admin_destroy_link(role) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @roles %>
    <% end %>
  <% end %>
<% end %>
