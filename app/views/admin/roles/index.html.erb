<%
  @title = "Roles"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@roles),
  h1: @title
) %>

<%= render "admin/shared/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @roles,
  columns: [
    { name: "ID",     method: :id             },
    { name: "Medium", method: :display_medium },
    { name: "Name",   method: :name           },
  ]
%>
