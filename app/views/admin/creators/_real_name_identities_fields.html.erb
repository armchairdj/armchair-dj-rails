<%
  records = f.object.real_name_identities
  error   = f.error(:real_name_identities)
  classes = join_attr("fields-for", "toggle", ("fieldset-with-errors" if error))
%>

<%= content_tag(:fieldset, class: classes,
  "data-target": "toggle.falseFieldset"
) do %>
  <%= content_tag(:legend, "Real Identity") %>

  <%= content_tag(:div, error, class: "legend-hint") if error %>

  <%= render partial: "admin/creators/real_name_identity_field", collection: records, as: :real_name_identity, locals: {
    f:        f,
    creators: creators
  } %>
<% end %>
