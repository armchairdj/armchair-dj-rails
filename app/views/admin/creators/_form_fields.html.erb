<%= content_tag(:fieldset) do %>
  <%= content_tag(:div, class: "boxed") do %>
    <%= f.input :name %>

    <%= f.input :summary, required: false, hint: true, input_html: { class: "small" } %>
  <% end %>
<% end %>

<%= content_tag(:fieldset, class: "legendary", "data-controller": "toggle-fieldset") do %>
  <%= content_tag(:div, class: "boxed") do %>
    <%= content_tag(:legend, "Primary") %>

    <%= render partial: "shared/custom_radio_group", locals: {
      f:          f,
      name:       :primary,
      collection: Creator.primary_options,
      invert:     true
    } %>

    <%= render partial: "admin/shared/forms/pseudonym_identity_fieldset", locals: {
      f:        f,
      creators: available_pseudonyms
    } %>

    <%= render partial: "admin/shared/forms/real_name_identity_fieldset", locals: {
      f:        f,
      creators: available_real_names
    } %>
  <% end %>
<% end %>

<%= content_tag(:fieldset, class: "legendary", "data-controller": "toggle-fieldset") do %>
  <%= content_tag(:div, class: "boxed") do %>
    <%= content_tag(:legend, "Collective") %>

    <%= render partial: "shared/custom_radio_group", locals: {
      f:          f,
      name:       :individual,
      collection: Creator.individual_options,
      invert:     true
    } %>

    <%= render partial: "admin/shared/forms/member_membership_fieldset", locals: {
      f:        f,
      creators: available_members
    } %>

    <%= render partial: "admin/shared/forms/group_membership_fieldset", locals: {
      f:        f,
      creators: available_groups
    } %>
  <% end %>
<% end %>
