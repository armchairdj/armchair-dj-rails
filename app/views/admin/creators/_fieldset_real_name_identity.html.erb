<%= f.simple_fields_for :real_name_identities, real_name_identity do |ff| %>
  <%= expandable_fieldset(class: "no-border") do %>
    <%= ff.input :real_name_id,
      as:            :select,
      label:         false,
      collection:    @available_real_names,
      required:      false,
      include_blank: :translate,
      input_html:    js_selectabe_create_creator_attrs("creator[real_name]")
    %>

    <%= ff.error :pseudonym_id %>

    <%= ff.input(:_destroy, as: :boolean) unless ff.object.new_record? %>
  <% end %>
<% end %>
