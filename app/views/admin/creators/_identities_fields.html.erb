<%
  errored = f.object.errors[:identities].any?
  classes = join_attr("legendary", "fields-for", ("fieldset-with-errors" if errored))
  hint    = f.error(:identities)
%>

<%= content_tag(:fieldset, class: classes, "data-controller": "expandable-has-many") do %>
  <%= content_tag(:legend, "Pseudonyms") %>

  <%= content_tag(:div, hint, class: "hint") if hint %>

  <%= render partial: "admin/creators/identity_field",
    collection: f.object.identities, as: :identity, locals: {
      f:        f,
      creators: creators
    }
  %>
<% end %>
