<%
  records = f.object.group_memberships
  error   = f.error(:group_memberships)
  classes = join_attr("fields-for", ("fieldset-with-errors" if error))
%>

<%= content_tag(:fieldset, class: classes,
  "data-controller": "expandable-has-many",
  "data-target":     "toggle.trueFieldset"
) do %>
  <%= content_tag(:legend, "Groups") %>

  <%= content_tag(:div, error, class: "legend-hint") if error %>

  <%= render partial: "admin/creators/group_membership_field", collection: records, as: :group_membership, locals: {
    f:        f,
    creators: creators
  } %>
<% end %>
