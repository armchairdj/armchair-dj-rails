<%
  @title = "Creators"
%>

<%= render "admin/shared/header", action: :index,
  prehead:  total_count_for(@creators),
  headline: @title
%>

<%= render "admin/shared/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @creators,
  columns: [
    { name: "ID",         method: :id          },
    { name: "Name",       method: :name        },
    { name: "Primary",    method: :primary?    },
    { name: "Individual", method: :individual? },
  ]
%>
