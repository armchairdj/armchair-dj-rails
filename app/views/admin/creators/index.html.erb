<%
  @title = "Creators"
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:   :index,
  headline: @title,
  prehead:  total_count_for(@creators)
} %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "admin/shared/index_tabs", locals: { model: Creator } %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @creators.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th Creator, "Name"       %>
            <%= sortable_th Creator, "Primary"    %>
            <%= sortable_th Creator, "Individual" %>

            <%= vpc_th  Creator, "VPC"  %>
            <%= nvpc_th Creator, "NVPC" %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @creators.each do |creator| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, creator.name       ) %>
              <%= content_tag(:td, creator.primary?   ) %>
              <%= content_tag(:td, creator.individual?) %>

              <%= vpc_cell( creator) %>
              <%= nvpc_cell(creator) %>

              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_creator_link(creator) %>
                <%= admin_view_link(          creator) %>
                <%= admin_update_link(        creator) %>
                <%= admin_destroy_link(       creator) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @creators %>
    <% end %>
  <% end %>
<% end %>
