<%
  @title = "Creators"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@creators),
  h1: @title
) %>

<%= render "admin/shared/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @creators,
  columns: [
    { name: "ID",         method: :id          },
    { name: "Name",       method: :name        },
    { name: "Primary",    method: :primary?    },
    { name: "Individual", method: :individual? },
  ]
%>
