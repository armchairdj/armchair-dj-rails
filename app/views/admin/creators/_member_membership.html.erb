<%= f.simple_fields_for :member_memberships, member_membership do |ff| %>
  <%= content_tag(:fieldset, class: "accepts-nested", "data-target": "expandable-fieldset.field") do %>
    <%= ff.input :member_id,
      as:            :select,
      label:         false,
      collection:    @available_members,
      required:      false,
      include_blank: :translate,
      input_html:    js_selectabe_create_creator_attrs("creator[member]")
    %>

    <%= ff.error :group_id %>

    <%= ff.input(:_destroy, as: :boolean) unless ff.object.new_record? %>
  <% end %>
<% end %>
