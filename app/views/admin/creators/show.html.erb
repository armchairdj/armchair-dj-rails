<%
  @title = ["View Creator", @creator.name]

  works         = @creator.works.for_admin.alpha
  roles         = @creator.display_roles
  contributions = @creator.contributions.for_admin.alpha
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @creator,
) %>

<%= admin_section("Attributes", class: "tabled") do %>
  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "ID") %>
        <%= content_tag(:td, @creator.id) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Name") %>
        <%= content_tag(:td, @creator.name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Individual?") %>
        <%= content_tag(:td, @creator.individual?) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Primary?") %>
        <%= content_tag(:td, @creator.primary?) %>
      <% end %>

      <% if @creator.secondary? && @creator.real_name.present? %>
        <%= content_tag(:tr) do %>
          <%= content_tag(:th, "Primary Identity") %>
          <%= content_tag(:td, link_to_creator(@creator.real_name)) %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@creator.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@creator.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @creator.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "list", locals: {
  creators: @creator.groups,
  headline: "Groups"
} %>

<%= render partial: "list", locals: {
  creators: @creator.members,
  headline: "Members"
} %>

<%= render partial: "list", locals: {
  creators: @creator.colleagues,
  headline: "Colleagues"
} %>

<%= render partial: "list", locals: {
  creators: @creator.personae,
  headline: "Personae"
} %>

<% if roles.any? %>
  <%= admin_section("Roles") do %>
    <%= content_tag(:dl, class: "horizontal right") do %>
      <% roles.each do |work_type, role_array| %>
        <%= content_tag(:dt, work_type     ) %>
        <%= content_tag(:dd, role_array.join(", ")) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if works.any? %>
  <%= admin_section("Works") do %>
    <%= content_tag(:dl, class: "horizontal right") do %>
      <% works.each do |work| %>
        <%= content_tag(:dt, work.true_human_model_name) %>
        <%= content_tag(:dd, link_to_work(work, full: false)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if contributions.any? %>
  <%= admin_section("Contributions") do %>
    <%= content_tag(:dl, class: "horizontal right") do %>
      <% contributions.each do |contribution| %>
        <%= content_tag(:dt, contribution.name) %>
        <%= content_tag(:dd, link_to_work(contribution.work)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "admin/posts/list", locals: {
  posts:    @creator.posts.for_admin.reverse_cron,
} %>
