<%
  @title = ["View Creator", @creator.name]

  @posts         = @creator.posts.for_admin.reverse_cron
  @works         = @creator.works.for_admin.alphabetical
  @contributions = @creator.contributions.for_admin.alphabetical
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :show,
  headline:    @title.first,
  instance:    @creator,
  public_link: admin_public_creator_link(@creator)
} %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Name") %>
        <%= content_tag(:td, @creator.name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@creator.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Primary?") %>
        <%= content_tag(:td, @creator.primary?) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Individual?") %>
        <%= content_tag(:td, @creator.individual?) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@creator.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@creator.updated_at)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if @creator.personae.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Aliases") %>
    <% end %>

    <%= content_tag(:ul, class: "square") do %>
      <% @creator.personae.each do |persona| %>
        <%= render partial: "admin/creators/creator", locals: { creator: persona } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if @creator.individual? %>
  <% if @creator.groups.any? %>
    <%= content_tag(:section, class: "admin-section") do %>
      <%= content_tag(:header) do %>
        <%= content_tag(:h4, "Groups") %>
      <% end %>

      <%= content_tag(:ul, class: "square") do %>
        <% @creator.groups.each do |group| %>
          <%= render partial: "admin/creators/creator", locals: { creator: group } %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <% if @creator.colleagues.any? %>
    <%= content_tag(:section, class: "admin-section") do %>
      <%= content_tag(:header) do %>
        <%= content_tag(:h4, "Colleagues") %>
      <% end %>

      <%= content_tag(:ul, class: "square") do %>
        <% @creator.colleagues.each do |colleague| %>
          <%= render partial: "admin/creators/creator", locals: { creator: colleague } %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <% if @creator.members.any? %>
    <%= content_tag(:section, class: "admin-section") do %>
      <%= content_tag(:header) do %>
        <%= content_tag(:h4, "Members") %>
      <% end %>

      <%= content_tag(:ul, class: "square") do %>
        <% @creator.members.each do |member| %>
          <%= render partial: "admin/creators/creator", locals: { creator: member } %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if @works.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Works By") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "admin/works/work", collection: @works %>
    <% end %>
  <% end %>
<% end %>

<% if @contributions.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Contributions") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "admin/creators/contribution", collection: @contributions %>
    <% end %>
  <% end %>
<% end %>

<% if @posts.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Posts About") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "admin/posts/post", collection: @posts %>
    <% end %>
  <% end %>
<% end %>
