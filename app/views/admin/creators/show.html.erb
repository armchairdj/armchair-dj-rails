<%
  @title = ["View Creator", @creator.name]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @creator,
) %>

<%= content_tag(:section, class: "admin-section tabled") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Name") %>
        <%= content_tag(:td, @creator.name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Individual?") %>
        <%= content_tag(:td, @creator.individual?) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Primary?") %>
        <%= content_tag(:td, @creator.primary?) %>
      <% end %>

      <% if @creator.secondary? %>
        <%= content_tag(:tr) do %>
          <%= content_tag(:th, "Primary Identity") %>
          <%= content_tag(:td, link_to_creator(@creator.real_name, admin: true)) %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@creator.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Viewable Posts") %>
        <%= content_tag(:td, @creator.viewable_post_count) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Non-Viewable Posts") %>
        <%= content_tag(:td, @creator.unviewable_post_count) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@creator.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@creator.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @creator.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "admin/shared/playback/creators", locals: {
  creators: @creator.groups,
  headline: "Groups"
} %>

<%= render partial: "admin/shared/playback/creators", locals: {
  creators: @creator.members,
  headline: "Members"
} %>

<%= render partial: "admin/shared/playback/creators", locals: {
  creators: @creator.colleagues,
  headline: "Colleagues"
} %>

<%= render partial: "admin/shared/playback/creators", locals: {
  creators: @creator.personae,
  headline: "Personae"
} %>

<%= render partial: "admin/shared/playback/roles_for_creator", locals: {
  roles: @creator.display_roles
} %>

<%= render partial: "admin/shared/playback/works", locals: {
  works: @creator.works.for_admin.alpha
} %>

<%= render partial: "admin/shared/playback/contributions", locals: {
  contributions: @creator.contributions.for_admin.alpha,
  context:       :creator
} %>

<%= render partial: "admin/shared/playback/posts", locals: {
  posts: @creator.posts.includes(:work).reverse_cron
} %>

<%= render partial: "admin/shared/playback/links", locals: {
  links: @creator.links
} %>
