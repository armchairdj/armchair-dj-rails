<%
  @title = ["View Creator", @creator.name]
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :show,
  headline:    @title.first,
  instance:    @creator,
  public_link: admin_public_creator_link(@creator)
} %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Name") %>
        <%= content_tag(:td, @creator.name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@creator.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Works") %>
        <%= content_tag(:td) do %>
          <% @creator.works.each do |work| %>
            <%= link_to_work(work, admin: true, full: false) %><br>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Contributed Works") %>
        <%= content_tag(:td) do %>
          <% @creator.contributed_works.each do |work| %>
            <%= link_to_work(work, admin: true) %><br>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Posts") %>
        <%= content_tag(:td) do %>
          <% @creator.posts.each do |post| %>
            <%= link_to_post(post, admin: true) %><br>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@creator.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@creator.updated_at)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
