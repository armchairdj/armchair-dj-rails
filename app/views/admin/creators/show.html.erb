<%
  @title = ["View Creator", @creator.name]

  @posts         = @creator.posts.for_admin.reverse_cron
  @works         = @creator.works.for_admin.alphabetical
  @contributions = @creator.contributions.for_admin.alphabetical
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :show,
  headline:    @title.first,
  instance:    @creator,
  public_link: admin_public_creator_link(@creator)
} %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Name") %>
        <%= content_tag(:td, @creator.name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@creator.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@creator.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@creator.updated_at)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if @posts.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Posts About") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "admin/posts/post", collection: @posts %>
    <% end %>
  <% end %>
<% end %>

<% if @works.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Works By") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "admin/works/work", collection: @works %>
    <% end %>
  <% end %>
<% end %>

<% if @contributions.any? %>
  <%= content_tag(:section, class: "admin-section") do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h4, "Contributions") %>
    <% end %>

    <%= content_tag(:dl, class: "horizontal right") do %>
      <%= render partial: "admin/creators/contribution", collection: @contributions %>
    <% end %>
  <% end %>
<% end %>
