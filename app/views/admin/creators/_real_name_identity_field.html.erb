<%= f.simple_fields_for :real_name_identities, real_name_identity do |ff| %>
  <%= content_tag(:fieldset, class: "accepts-nested") do %>
    <%= ff.input :real_name_id,
      as:            :select,
      label:         false,
      collection:    creators,
      required:      false,
      include_blank: :translate,
      input_html:    {
        "data-controller":           "create-real-name",
        "data-create-real-name-url": admin_creators_path,
      }
    %>

    <%= ff.error :pseudonym_id %>

    <%= ff.input(:_destroy, as: :boolean) unless ff.object.new_record? %>
  <% end %>
<% end %>
