<%= f.simple_fields_for :identities, identity do |ff| %>
  <%= content_tag(:fieldset, class: "accepts-nested") do %>
    <%= ff.input :pseudonym_id,
      as:            :select,
      label:         false,
      collection:    creators,
      required:      false,
      include_blank: :translate,
      input_html:    {
        "data-controller":           "create-pseudonym",
        "data-create-pseudonym-url": admin_creators_path,
      }
    %>

    <%= ff.error :creator_id %>

    <%= render(partial: "shared/custom_checkbox", locals: {
      f:    ff,
      name: :_destroy
    }) unless ff.object.new_record? %>
  <% end %>
<% end %>
