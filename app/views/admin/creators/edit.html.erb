<%
  @title = ["Update Creator", @creator.name]
%>

<%= render partial: 'admin/shared/admin_header', locals: {
  action:      :edit,
  headline:    @title.first,
  instance:    @creator,
  public_link: admin_public_creator_link(@creator)
} %>

<%= content_tag(:header, class: 'admin') do %>
  <%= content_tag(:h1, @title.first) %>

  <%= content_tag(:div, class: 'actions') do %>
    <%= admin_destroy_link(@creator) %>
  <% end %>
<% end %>


<%= render partial: 'creator_form', locals: { creator: @creator } %>
