<%
  records = f.object.member_memberships
  error   = f.error(:member_memberships)
  classes = join_attr("fields-for", "toggle", ("fieldset-with-errors" if error))
%>

<%= content_tag(:fieldset, js_togglable_attrs(false, classes, expandable: true)) do %>
  <%= content_tag(:legend, "Members") %>

  <%= content_tag(:div, error, class: "legend-hint") if error %>

  <%= render partial: "member_membership", collection: records, locals: { f: f } %>
<% end %>
