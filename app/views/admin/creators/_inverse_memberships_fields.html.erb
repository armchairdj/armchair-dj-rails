<%
  records = f.object.inverse_memberships
  error   = f.error(:inverse_memberships)
  classes = join_attr("legendary", "fields-for", ("fieldset-with-errors" if error))
%>

<%= content_tag(:fieldset, class: classes,
  "data-controller": "expandable-has-many",
  "data-target":     "toggle.false_fieldset"
) do %>
  <%= content_tag(:legend, "Groups") %>

  <%= content_tag(:div, error, class: "hint") if error %>

  <%= render partial: "admin/creators/inverse_membership_field", collection: records, as: :membership, locals: {
    f:        f,
    creators: creators
  } %>
<% end %>
