<%= content_tag(:fieldset) do %>
  <%= f.input :name %>

  <%= f.input :summary, required: false, hint: true %>
<% end %>

<%= content_tag(:fieldset, class: "boxed", "data-controller": "identity") do %>
  <%= content_tag(:legend, "Primary") %>

  <%= render partial: "shared/custom_radio_group", locals: {
    f:          f,
    name:       :primary,
    collection: Creator.primary_options,
    invert:     true
  } %>

  <%= render partial: "admin/creators/identities_fields", locals: {
    f:        f,
    creators: available_pseudonyms
  } %>
<% end %>

<%= content_tag(:fieldset, class: "boxed", "data-controller": "membership") do %>
  <%= content_tag(:legend, "Collective") %>

  <%= render partial: "shared/custom_radio_group", locals: {
    f:          f,
    name:       :collective,
    collection: Creator.collective_options,
    invert:     true
  } %>

  <%= render partial: "admin/creators/memberships_fields", locals: {
    f:        f,
    creators: available_members
  } %>
<% end %>
