<%= content_tag(:fieldset) do %>
  <%= f.input :name %>

  <%= f.input :summary, required: false, hint: true %>
<% end %>

<%= content_tag(:fieldset, class: "boxed", "data-controller": "toggle") do %>
  <%= content_tag(:legend, "Primary") %>

  <%= render partial: "shared/custom_radio_group", locals: {
    f:          f,
    name:       :primary,
    collection: Creator.primary_options.reverse,
    invert:     true
  } %>

  <%= render partial: "admin/creators/identities_fields", locals: {
    f:        f,
    creators: available_pseudonyms
  } %>

  <%= render partial: "admin/creators/inverse_identities_fields", locals: {
    f:        f,
    creators: available_real_names
  } %>
<% end %>

<%= content_tag(:fieldset, class: "boxed", "data-controller": "toggle") do %>
  <%= content_tag(:legend, "Collective") %>

  <%= render partial: "shared/custom_radio_group", locals: {
    f:          f,
    name:       :individual,
    collection: Creator.individual_options.reverse,
    invert:     true
  } %>

  <%= render partial: "admin/creators/memberships_fields", locals: {
    f:        f,
    creators: available_members
  } %>

  <%= render partial: "admin/creators/inverse_memberships_fields", locals: {
    f:        f,
    creators: available_groups
  } %>
<% end %>
