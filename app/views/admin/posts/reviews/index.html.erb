<%
  @title = "Reviews"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@reviews),
  h1: @title
) %>

<%= render "shared/admin/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @reviews,
  columns: [
    { name: "Status", method: -> (x) { post_status_icon(x) }, text: published_status_icon, class: "icon" },
    { name: "ID",     method: :id                                    },
    { name: "Title",  method: -> (x) { review_title(x, length: 40) } },
    { name: "Author", method: :display_author                        },
    { name: "Medium", method: :medium                                },
  ]
%>
