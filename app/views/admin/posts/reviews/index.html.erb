<%
  @title = "Reviews"
%>

<%= render "admin/shared/header", action: :index,
  prehead:  total_count_for(@reviews),
  headline: @title
%>

<%= render "admin/shared/index",
  collection: @collection,
  records: @reviews,
  columns: [
    { name: "Status", method: -> (x) { post_status_icon(x) }, text: status_icon_header, class: "icon" },
    { name: "ID",     method: :id },
    { name: "Title",  method: -> (x) { review_title(x, length: 40) } },
    { name: "Author", method: :display_author  },
    { name: "Medium", method: :display_medium },
  ]
%>
