<%
  @title = ["View Review", @review.display_author, review_title(@review)]
%>

<%= render "admin/shared/header", action: :show, instance: @review,
  headline: @title.first
%>

<%= render "admin/shared/show",
  record: @review,
  rows: [
    { name: "ID",       method: :id },
    { name: "Medium",   method: -> (x) { x.work.display_medium } },
    { name: "Work",     method: -> (x) { link_to_work(x.work) } },
    { name: "Author",   method: -> (x) { link_to_author_of(x, admin: true) } },
    { name: "Status",   method: -> (x) { admin_post_status(x) } },
    { name: "Tags",     method: -> (x) { tag_list(x.tags, admin: true) } },
    { name: "Links",    method: -> (x) { link_list(x.links) } },
    { name: "Created",  date: true, method: :created_at },
    { name: "Updated",  date: true, method: :updated_at },
    { name: "Alpha",    method: :alpha },
    { name: "Slug",     method: :slug },
    { name: "Summary",  method: -> (x) { paragraphs(x.summary) } },
  ]
%>

<%= admin_section do %>
  <%= post_body @review %>
<% end %>
