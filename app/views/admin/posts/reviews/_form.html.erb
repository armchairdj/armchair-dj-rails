<% html_opts = js_autosave_attrs(@review).merge(class: "admin") %>

<%= simple_form_for([:admin, @review], html: html_opts) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:section, class: "adj-module") do %>
      <%= content_tag(:fieldset) do %>
        <%= f.input :work_id, as: :grouped_select,
          collection:         @works,
          required:           false,
          group_label_method: :first,
          group_method:       :last,
          label_method:       :full_display_title,
          value_method:       :id,
          include_blank:      :translate,
          input_html:         js_selectable_prepare_work_attrs
        %>

        <%= render partial: "admin/posts/standard_fields", locals: { f: f } %>
      <% end %>
    <% end %>

    <%= render partial: "admin/links/has_many_links_fieldset", locals: { f: f } %>
    <%= render partial: "admin/posts/publication_details",     locals: { f: f } %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :button, "Save", type: :submit %>
  <% end %>
<% end %>
