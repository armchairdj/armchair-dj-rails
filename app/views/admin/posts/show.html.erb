<%
  @title = ["View Post", @post.one_line_title]
%>

<%= content_tag(:header, class: 'admin') do %>
  <%= content_tag(:h1, @title.first) %>

  <%= content_tag(:div, class: 'actions') do %>
    <%= admin_destroy_link(@post) %>
    <%= admin_update_link(@post) %>
  <% end %>
<% end %>

<%= content_tag(:table, class: 'admin admin-view') do %>
  <%= content_tag(:tbody) do %>
    <%= content_tag(:tr) do %>
      <%= content_tag(:th, "Slug") %>
      <%= content_tag(:td, @post.slug) %>
    <% end %>

    <%= content_tag(:tr) do %>
      <%= content_tag(:th, "Type") %>
      <%= content_tag(:td, post_type(@post)) %>
    <% end %>

    <% if @post.work.present? %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Creator") %>
        <%= content_tag(:td, @post.work.display_creator) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @post.work.title) %>
      <% end %>
    <% else %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @post.title) %>
      <% end %>
    <% end %>

    <%= content_tag(:tr) do %>
      <%= content_tag(:th, "Created") %>
      <%= content_tag(:td, admin_date(@post.created_at)) %>
    <% end %>

    <%= content_tag(:tr) do %>
      <%= content_tag(:th, "Updated") %>
      <%= content_tag(:td, admin_date(@post.updated_at)) %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag(:div, @post.body) %>
