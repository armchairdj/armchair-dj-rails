<%
  @title = @post.one_line_title
%>

<% content_for(:page_header) do %>
  <%= content_tag(:header, class: 'page-header work') do %>
    <%= crud_destroy_link(@post) %>
    <%= crud_update_link(@post) %>

    <% if @post.work %>
      <%= content_tag(:h2, @post.work.display_creator) %>
      <%= content_tag(:h1, @post.work.title) %>
    <% else %>
      <%= content_tag(:h1, @post.title) %>
    <% end %>
  <% end %>
<% end %>

<%= @post.body %>
