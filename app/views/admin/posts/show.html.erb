<%
  @title = ["View Post", post_title(@post)]
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :show,
  headline:    @title.first,
  instance:    @post,
  public_link: admin_public_post_link(@post)
} %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, post_title(@post)) %>
  <% end %>

  <%= content_tag(:div, formatted_post_body(@post)) %>
<% end %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Status") %>
        <%= content_tag(:td) do %>
          <%= @post.human_status %>
          <% if @post.published? %>
            on <%= admin_date(@post.published_at, pubdate: "pubdate") %>
          <% elsif @post.scheduled? %>
            for <%= admin_date(@post.publish_on) %>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Type") %>
        <%= content_tag(:td, @post.type) %>
      <% end %>

      <% if @post.review? %>
        <%= content_tag(:tr) do %>
          <%= content_tag(:th, "Subject") %>
          <%= content_tag(:td, link_to_work(@post.work, admin: true)) %>
        <% end %>
      <% else %>
        <%= content_tag(:tr) do %>
          <%= content_tag(:th, "Title") %>
          <%= content_tag(:td, @post.title) %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Author") %>
        <%= content_tag(:td) do %>
          <%= link_to(@post.author.username, admin_user_path(@post.author)) %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@post.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Slug") %>
        <%= content_tag(:td) do %>
          <%= @post.slug %> <%= "(dirty)" if @post.dirty_slug? %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@post.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@post.updated_at)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
