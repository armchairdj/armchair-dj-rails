<%
  @title = [I18n.t("content.posts.preview.title.#{controller_name}"), post_title(@post)]
%>

<% content_for :post_preview do %>
  <%= render "posts/#{controller_name}/show" %>
<% end %>

<%= render "admin/shared/header", action: :preview, instance: @post,
  headline: @title.first
%>

<%= content_tag(:p, class: "form-instructions") do %>
  <% if @post.published? %>
    <%= I18n.t("content.posts.preview.instructions.published") %>
  <% else %>
    <%= I18n.t("content.posts.preview.instructions.unpublished") %>
  <% end %>
<% end %>

<%= adj_module do %>
  <%= content_for :post_header %>
  <%= content_for :post_preview %>
<% end %>
