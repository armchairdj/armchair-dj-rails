<%= content_tag(:div, class: "tabgroup") do %>
  <%= content_tag(:ul, class: "tabs") do %>
    <% if selected_tab == :edit %>
      <%= content_tag(:li, content_tag(:span, "Edit", class: "tab-active")) %>
      <%= content_tag(:li, link_to("Preview", preview_admin_post_path(@post))) %>
    <% else %>
      <%= content_tag(:li, link_to("Edit", edit_admin_post_path(@post))) %>
      <%= content_tag(:li, content_tag(:span, "Preview", class: "tab-active")) %>
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "tab") do %>
    <%= yield %>
  <% end %>
<% end %>
