<%
  @title = "Posts"
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:   :index,
  headline: @title,
  prehead:  pluralize(@posts.total_count, "Total Record")
} %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "admin/shared/index_tabs", locals: { model: Post } %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @posts.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= content_tag(:th, "Type") %>
            <%= content_tag(:th, "Status", class: "icon") %>
            <%= content_tag(:th, "Title") %>
            <%= content_tag(:th, "Actions", class: "actions") %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @posts.each do |post| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, post.type) %>
              <%= content_tag(:td, post_status_icon(post), class: "icon")%>
              <%= content_tag(:td, post_title(post)) %>
              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_post_link(post) %>
                <%= admin_view_link(post) %>
                <%= admin_update_link(post) %>
                <%= admin_destroy_link(post) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @posts %>
    <% end %>
  <% end %>
<% end %>
