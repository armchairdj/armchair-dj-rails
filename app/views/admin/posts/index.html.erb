<%
  @title = "Posts"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@posts),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scopes) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @posts.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th @sorts, "Status", text: viewable_icon, class: "icon"    %>
            <%= sortable_th @sorts, "Title"                                         %>
            <%= sortable_th @sorts, "Author"                                        %>
            <%= sortable_th @sorts, "Type",                        class: "actions" %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @posts.each do |post| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, post_status_icon(post), class: "icon"   ) %>
              <%= content_tag(:td, post_title(post, length: 40)            ) %>
              <%= content_tag(:td, post.author.username                    ) %>
              <%= content_tag(:td, post.type,              class: "actions") %>

              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_link(post) %>
                <%= admin_view_link(      post) %>
                <%= admin_update_link(    post) %>
                <%= admin_destroy_link(   post) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @posts %>
    <% end %>
  <% end %>
<% end %>
