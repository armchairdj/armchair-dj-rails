<%
  @title = ["View Article", @article.display_author, article_title(@article)]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @article,
) %>

<%= admin_section(article_title(@article)) do %>
  <%= content_tag(:div, formatted_post_body(@article)) %>
<% end %>

<%= admin_section("Attributes", class: "tabled") do %>
  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "ID") %>
        <%= content_tag(:td, @article.id) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Status") %>
        <%= content_tag(:td) do %>
          <%= @article.human_status %>
          <% if @article.published? %>
            on <%= admin_date(@article.published_at, pubdate: "pubdate") %>
          <% elsif @article.scheduled? %>
            for <%= admin_date(@article.publish_on) %>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @article.title) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Author") %>
        <%= content_tag(:td) do %>
        <%= content_tag(:td, link_to_author_of(@article, admin: true)) %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Tags") %>
        <%= content_tag(:td, tag_list(@tags, admin: true)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Links") %>
        <%= content_tag(:td) do %>
          <%= link_list(@links) %>
        <% end %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@article.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@article.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@article.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Slug") %>
        <%= content_tag(:td, @article.slug) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @article.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
