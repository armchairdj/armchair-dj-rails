<%= render "admin/shared/index",
  collection: @collection,
  records: @articles,
  columns: [
    { name: "Status", method: -> (x) { post_status_icon(x) }, text: status_icon_header, class: "icon" },
    { name: "ID",     method: :id, class: "nowrap" },
    { name: "Title",  method: -> (x) { article_title(x, length: 40) } },
    { name: "Author", method: :display_author },
  ]
%>
