<%
  @title = ["View Mixtape", @mixtape.display_author, mixtape_title(@mixtape)]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @mixtape,
) %>

<%= render "admin/shared/show",
  record: @mixtape,
  rows: [
    { name: "ID",       method: :id },
    { name: "Playlist", method: -> (x) { link_to_playlist(x.playlist) } },
    { name: "Author",   method: -> (x) { link_to_author_of(x, admin: true) } },
    { name: "Status",   method: -> (x) { post_status_and_date(x) } },
    { name: "Tags",     method: -> (x) { tag_list(x.tags, admin: true) } },
    { name: "Links",    method: -> (x) { link_list(x.links) } },
    { name: "Created",  date: true, method: :created_at },
    { name: "Updated",  date: true, method: :updated_at },
    { name: "Alpha",    method: :alpha },
    { name: "Slug",     method: :slug, class: "break-long-words" },
    { name: "Summary",  method: -> (x) { paragraphs(x.summary) } },
  ]
%>

<%= admin_section formatted_post_body(@mixtape) %>
