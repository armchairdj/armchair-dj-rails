<%
  @title = ["Preview Mixtape", mixtape_title(@mixtape)]

  deck = if @mixtape.published?
    "This is how the post looks on the site."
  else
    "This is how the post will look on the site when published"
  end
%>

<%= render "admin/shared/header", action: :preview, instance: @mixtape,
  headline: @title.first,
  deck:     deck
%>

<% content_for :post_preview do %>
  <%= render "posts/mixtapes/show" %>
<% end %>

<%= content_for :post_header %>
<%= content_for :post_preview %>
