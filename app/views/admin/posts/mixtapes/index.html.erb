<%
  @title = "Mixtapes"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@mixtapes),
  h1: @title
) %>

<%= render "admin/shared/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @mixtapes,
  columns: [
    { name: "Status", method: -> (x) { post_status_icon(x) }, text: published_status_icon, class: "icon" },
    { name: "ID",     method: :id                                     },
    { name: "Title",  method: -> (x) { mixtape_title(x, length: 40) } },
    { name: "Author", method: :display_author                         },
  ]
%>
