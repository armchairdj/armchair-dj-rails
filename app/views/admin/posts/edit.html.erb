<%
  @title = ["Update Post", post_title(@post)]
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:      :edit,
  headline:    @title.first,
  instance:    @post,
  public_link: admin_public_post_link(@post)
} %>

<%= render partial: "form", locals: {
  post:           @post,
  works:          @works,
  roles:          @roles,
  creators:       @creators,
  selected_tab:   @selected_tab,
  available_tabs: @available_tabs,
} %>
