<% return if posts.empty? %>

<%= admin_section(local_assigns[:headline] || "Posts") do %>
  <%= content_tag(:dl, class: "horizontal right") do %>
    <% posts.each do |post| %>
      <%= content_tag(:dt, post.display_type) %>
      <%= content_tag(:dd, link_to_post(post, full: true, admin: true)) %>
    <% end %>
  <% end %>
<% end %>
