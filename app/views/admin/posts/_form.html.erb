<%
  html_opts = js_autosave_attrs(@post).merge(class: "admin")
%>

<%= simple_form_for([:admin, @post], html: html_opts) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:section, class: "adj-module") do %>
      <%= content_tag(:fieldset) do %>
        <%= yield f %>

        <%= f.input :body, input_html: {
          class: "x-large"
        } %>

        <%= f.input :summary, required: false, hint: true, input_html: {
          class: "small"
        } %>

        <%= f.input :tag_ids,
          as:         :select,
          collection: @tags,
          input_html: js_selectable_create_tag_attrs
        %>
      <% end %>
    <% end %>

    <%= render "admin/links/has_many_links_fieldset", f: f %>

    <% if @post.persisted? %>
      <%= render "admin/posts/publication_fieldset", f: f %>
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= admin_submit_button(f) %>
  <% end %>
<% end %>
