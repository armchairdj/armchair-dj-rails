<% tab_name = "post-new-work" %>

<% content_for(:tab_triggers) do %>
  <%= content_tag(:li) do %>
    <%= link_to("New Work", "##{tab_name}", "data-target": "tabbable.all", "data-action": "click->tabbable#activate", "data-tab-name": tab_name) %>
  <% end %>
<% end %>

<% content_for(:tabs) do %>
  <%= content_tag(:div, class: "tab", "data-target": "tabbable.all", "data-tab-name": tab_name, id: tab_name) do %>
    <%= content_tag(:fieldset, class: "chunk") do %>
      <%= content_tag(:legend, "New Work", "data-target": "tabbable.remove") %>

      <%= f.simple_fields_for :work do |ff| %>
        <%= render partial: "admin/works/form_fields", locals: {
          f:        ff,
          show_all: false,
          creators: creators,
          media:    media,
        } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
