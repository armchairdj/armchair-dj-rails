<% tab_name = "post-new-work" %>

<% content_for(:tab_triggers) do %>
  <%= content_tag(:li) do %>
    <%= js_tabbable_link("New Work", tab_name) %>
  <% end %>
<% end %>

<% content_for(:tabs) do %>
  <%= content_tag(:div, js_tabbable_tab_attrs(tab_name)) do %>
    <%= content_tag(:fieldset, class: "chunk") do %>
      <%= content_tag(:legend, "New Work", "data-target": "tabbable.remove") %>

      <%= f.simple_fields_for :work do |ff| %>
        <%= render partial: "admin/works/form_fields", locals: {
          f:        ff,
          show_all: false,
          creators: creators,
          media:    media,
        } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
