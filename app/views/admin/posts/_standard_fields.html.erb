<%= f.input :body, required: true, input_html: {
  class: "x-large"
} %>

<%= f.input :summary, required: true, hint: true, input_html: {
  class: "small"
} %>

<%= f.input :tag_ids,
  as:         :select,
  collection: @tags,
  input_html: js_selectable_create_tag_attrs
%>
