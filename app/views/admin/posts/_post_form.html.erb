<%= simple_form_for([:admin, post], html: { class: "admin"}) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= render partial: "admin/posts/post_fields", locals: {
      f:              f,
      works:          works,
      creators:       creators,
      roles:          roles,
      selected_tab:   selected_tab,
      available_tabs: available_tabs,
    } %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit, "Save" %>

    <% if post.may_publish? %>
      <%= f.button :button, "Save and Publish",
        type:           :submit,
        name:           "step",
        value:          "publish",
        class:          "danger",
        "data-confirm": "Are you sure?"
      %>
    <% elsif post.may_unpublish? %>
      <%= f.button :button, "Save and Unpublish",
        type:           :submit,
        name:           "step",
        value:          "unpublish",
        class:          "danger",
        "data-confirm": "Are you sure?"
      %>
    <% end %>
  <% end %>
<% end %>
