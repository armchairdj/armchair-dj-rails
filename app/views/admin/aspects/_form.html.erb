<%= simple_form_for([:admin, @aspect], html: { class: "admin"}) do |f| %>
  <%= f.error_notification %>

  <%= form_inputs do %>
    <%= adj_module do %>
      <%= f.input(:facet,
        as:            :select,
        collection:    @facets,
        include_blank: :translate
      ) %>

      <%= f.input :name %>
    <% end %>
  <% end %>

  <%= button_group submit_button(@aspect) %>
<% end %>
