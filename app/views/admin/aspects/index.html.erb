<%
  @title = "Aspects"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@aspects),
  h1: @title
) %>

<%= render "admin/shared/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @aspects,
  columns: [
    { name: "ID",        method: :id          },
    { name: "Facet",     method: :human_facet },
    { name: "Name",      method: :name        },
  ]
%>
