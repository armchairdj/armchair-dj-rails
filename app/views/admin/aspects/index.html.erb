<%
  @title = "Aspects"
%>

<%= render "admin/shared/header", action: :index,
  prehead:   total_count_for(@aspects),
  headline: @title
%>

<%= render "admin/shared/index",
  collection: @collection,
  records: @aspects,
  columns: [
    { name: "ID",    method: :id          },
    { name: "Facet", method: :human_facet },
    { name: "Name",  method: :name        },
  ]
%>
