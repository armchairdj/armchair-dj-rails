<%
  prehead  = nil if local_assigns[:prehead ].nil?
  subhead  = nil if local_assigns[:subhead ].nil?
  deck     = nil if local_assigns[:deck    ].nil?
  instance = nil if local_assigns[:instance].nil?
%>

<%= content_tag(:header, class: "admin") do %>
  <%= content_tag_unless_empty(:h4, prehead) %>
  <%= content_tag(:h1, headline) %>
  <%= content_tag_unless_empty(:h3, subhead) %>
  <%= content_tag_unless_empty(:h5, deck) %>

  <%= content_tag(:div, class: "actions") do %>
    <% case action %>
    <% when :index %>
      <%= admin_create_link  @model_class %>
    <% when :new %>
      <%= admin_list_link    @model_class %>
    <% when :edit %>
      <%= admin_public_link  instance     %>
      <%= admin_view_link    instance     %>
      <%= admin_destroy_link instance     %>
      <%= admin_list_link    @model_class %>
    <% when :show %>
      <%= admin_public_link  instance     %>
      <%= admin_update_link  instance     %>
      <%= admin_destroy_link instance     %>
      <%= admin_list_link    @model_class %>
    <% end %>
  <% end %>
<% end %>
