<%= f.simple_fields_for :group_memberships, group_membership do |ff| %>
  <%= content_tag(:fieldset, class: "accepts-nested") do %>
    <%= ff.input :group_id,
      as:            :select,
      label:         false,
      collection:    creators,
      required:      false,
      include_blank: :translate,
      input_html:    {
        "data-controller":       "create-group",
        "data-create-group-url": admin_creators_path
      }
    %>

    <%= ff.error :member_id %>

    <%= ff.input(:_destroy, as: :boolean) unless ff.object.new_record? %>
  <% end %>
<% end %>
