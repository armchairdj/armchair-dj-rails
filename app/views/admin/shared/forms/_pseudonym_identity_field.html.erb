<%= f.simple_fields_for :pseudonym_identities, pseudonym_identity do |ff| %>
  <%= content_tag(:fieldset, class: "accepts-nested") do %>
    <%= ff.input :pseudonym_id,
      as:            :select,
      label:         false,
      collection:    creators,
      required:      false,
      include_blank: :translate,
      input_html:    {
        "data-controller":                     "selectable-create",
        "data-selectable-create-url":          admin_creators_path,
        "data-selectable-create-param":        "creator[name]",
        "data-selectable-create-extra-params": "creator[primary]=false"
      }
    %>

    <%= ff.error :real_name_id %>

    <%= ff.input(:_destroy, as: :boolean) unless ff.object.new_record? %>
  <% end %>
<% end %>
