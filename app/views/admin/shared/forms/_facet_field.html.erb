<%= f.simple_fields_for :facets, facet do |ff| %>
  <%= content_tag(:fieldset, class: "accepts-nested", "data-target": "expandable-fieldset.field") do %>
    <%= ff.input :category_id,
      as:            :select,
      collection:    categories,
      required:      false,
      label:         false,
      include_blank: :translate,
      input_html:    {
        "data-controller":              "selectable-create",
        "data-selectable-create-scope": "facet-category",
        "data-selectable-create-url":   admin_categories_path,
        "data-selectable-create-param": "category[name]",
      }
    %>

    <%= ff.input(:_destroy, as: :boolean) unless ff.object.new_record? %>
  <% end %>
<% end %>
