<%
  records = f.object.pseudonym_identities
  error   = f.error(:pseudonym_identities)
  classes = join_attr("fields-for", "toggle", ("fieldset-with-errors" if error))
%>

<%= content_tag(:fieldset, class: classes,
  "data-controller": "expandable-fieldset",
  "data-target":     "togglable-fieldset.trueFieldset"
) do %>
  <%= content_tag(:legend, "Pseudonyms") %>

  <%= content_tag(:div, error, class: "legend-hint") if error %>

  <%= render partial: "admin/shared/forms/pseudonym_identity_field", collection: records, as: :pseudonym_identity, locals: {
    f:        f,
    creators: creators
  } %>
<% end %>
