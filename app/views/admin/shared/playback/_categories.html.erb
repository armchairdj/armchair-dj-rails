<% return if categories.empty? %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Tags") %>
  <% end %>

  <%= content_tag(:dl, class: "horizontal right") do %>
    <% categories.each do |category, tags| %>
      <%= content_tag(:dt, category.name.pluralize) %>
      <% tags.each do |tag| %>
        <%= content_tag(:dd, tag.name) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
