<% return if roles.empty? %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Roles") %>
  <% end %>

  <%= content_tag(:ul, class: "square") do %>
    <% roles.each do |role| %>
      <%= content_tag(:li, role.name) %>
    <% end %>
  <% end %>
<% end %>
