<% return if posts.empty? %>

<% headline = "Posts" if local_assigns[:headline].nil? %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, headline) %>
  <% end %>

  <%= content_tag(:dl, class: "horizontal right") do %>
    <%= render partial: "admin/shared/playback/post", collection: posts %>
  <% end %>
<% end %>
