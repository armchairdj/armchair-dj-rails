<%
  @title = ["View Medium", @medium.name]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @medium,
) %>

<%= content_tag(:section, class: "admin-section tabled") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Attributes") %>
  <% end %>

  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Name") %>
        <%= content_tag(:td, @medium.name) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Summary") %>
        <%= content_tag(:td, paragraphs(@medium.summary)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Viewable?") %>
        <%= content_tag(:td, @medium.viewable?) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@medium.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@medium.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @medium.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "admin/shared/playback/roles", locals: {
  roles: @medium.roles.alpha
} %>

<%= render partial: "admin/shared/playback/facets", locals: {
  facets: @medium.facets.for_admin
} %>

<%= render partial: "admin/shared/playback/works", locals: {
  works: @medium.works.for_admin.alpha
} %>

<%= render partial: "admin/shared/playback/creators", locals: {
  creators: @medium.creators.for_admin.alpha
} %>

<%= render partial: "admin/shared/playback/reviews", locals: {
  reviews: @medium.reviews.for_admin.reverse_cron
} %>

<%= render partial: "admin/shared/playback/links", locals: {
  links: @medium.links
} %>
