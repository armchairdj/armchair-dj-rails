<%
  @title = "Media"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@media),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scopes) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @media.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th @sorts, "Name" %>
            <%= sortable_th @sorts, "PPC", text: ppc_icon, class: "icon" %>
            <%= sortable_th @sorts, "DPC", text: dpc_icon, class: "icon" %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @media.each do |medium| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, medium.name) %>

              <%= content_tag(:td, medium.viewable_post_count,     class: "icon") %>
              <%= content_tag(:td, medium.unviewable_post_count, class: "icon") %>

              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_link(medium) %>
                <%= admin_view_link(      medium) %>
                <%= admin_update_link(    medium) %>
                <%= admin_destroy_link(   medium) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @media %>
    <% end %>
  <% end %>
<% end %>
