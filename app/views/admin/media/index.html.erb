<%
  @title = "Media"
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:   :index,
  headline: @title,
  prehead:  total_count_for(@media)
} %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "admin/shared/index_tabs", locals: { model: Medium } %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @media.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= content_tag(:th, "Name") %>
            <%= content_tag(:th, viewable_post_count_icon,  class: "icon") %>
            <%= content_tag(:th, non_viewable_post_count_icon, class: "icon") %>
            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @media.each do |medium| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, medium.name) %>
              <%= content_tag(:td, medium.viewable_post_count,     class: "icon") %>
              <%= content_tag(:td, medium.non_viewable_post_count, class: "icon") %>
              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_medium_link(medium) %>
                <%= admin_view_link(medium) %>
                <%= admin_update_link(medium) %>
                <%= admin_destroy_link(medium) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @media %>
    <% end %>
  <% end %>
<% end %>
