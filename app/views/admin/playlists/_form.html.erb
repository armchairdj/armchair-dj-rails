<%= simple_form_for([:admin, @playlist], html: { class: "admin" }) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:section, class: "adj-module") do %>
      <%= content_tag(:fieldset) do %>
        <%= f.input :title, required: true %>
      <% end %>
    <% end %>

    <%= render partial: "shared/forms/has_many_fieldset", locals: {
      f:           f,
      association: :playlistings,
      required:    true,
      headline:    "Tracks",
    } %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= admin_submit_button(f) %>
  <% end %>
<% end %>
