<%= simple_form_for([:admin, @playlist], html: { class: "admin" }) do |f| %>
  <%= f.error_notification %>

  <%= form_inputs do %>
    <%= adj_module do %>
      <%= content_tag(:fieldset) do %>
        <%= f.input :title, required: true %>
      <% end %>
    <% end %>

    <%= render "shared/forms/has_many_fieldset",
      f:           f,
      association: :tracks,
      required:    true,
      headline:    "Tracks"
    %>
  <% end %>

  <%= render "shared/forms/imageable_fieldset", f: f %>

  <%= button_group submit_button(@playlist) %>
<% end %>
