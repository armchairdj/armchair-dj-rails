<%
  @title = ["View Playlist", @playlist.display_author, @playlist.title]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @playlist,
) %>

<%= admin_section("Attributes", class: "tabled") do %>
  <%= content_tag(:table, class: "admin admin-view") do %>
    <%= content_tag(:tbody) do %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "ID") %>
        <%= content_tag(:td, @playlist.id) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Title") %>
        <%= content_tag(:td, @playlist.title) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Author") %>
        <%= content_tag(:td, link_to_author_of(@playlist, admin: true)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Created") %>
        <%= content_tag(:td, admin_date(@playlist.created_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Updated") %>
        <%= content_tag(:td, admin_date(@playlist.updated_at)) %>
      <% end %>

      <%= content_tag(:tr) do %>
        <%= content_tag(:th, "Alpha") %>
        <%= content_tag(:td, @playlist.alpha) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render partial: "playlistings",        as: "playlistings", object: @playlist.playlistings.for_admin %>
<%= render partial: "admin/creators/list", as: "creators",     object: @playlist.creators.for_admin.alpha %>
<%= render partial: "admin/posts/list",    as: "posts",        object: @playlist.mixtapes.for_admin.reverse_cron %>
