<% return if playlistings.empty? %>

<%= admin_section(headline: "Tracks", subhead: "Drag to Reorder") do %>
  <%= content_tag(:ol, js_sortable_playlistings_attrs(@playlist)) do %>
    <% playlistings.each do |playlisting| %>
      <%= content_tag(:li, "data-id": playlisting.id) do %>
        <%= link_to_work(playlisting.work, full: false) %>
        by
        <% playlisting.work.credits.each.with_index(1) do |credit, index| %>
          <%= link_to_creator(credit.creator) %>
          <% if index != playlisting.work.credits.size %>
            &amp;
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
