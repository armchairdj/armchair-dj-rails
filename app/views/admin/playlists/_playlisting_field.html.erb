<%= f.simple_fields_for :playlistings, playlisting do |ff| %>
  <%= content_tag(:fieldset, class: "accepts-nested", "data-target": "expandable-fieldset.field") do %>
    <%= ff.input :work_id, as: :grouped_select,
      collection:         @works,
      required:           false,
      group_label_method: :first,
      group_method:       :last,
      label_method:       :full_display_title,
      value_method:       :id,
      include_blank:      :translate,
      input_html:         { "data-controller": "selectable" }
    %>

    <%= ff.input(:_destroy, as: :boolean) unless ff.object.new_record? %>
  <% end %>
<% end %>
