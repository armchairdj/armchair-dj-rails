<%
  @title = "Playlists"
%>

<%= render "admin/shared/header", action: :index,
  prehead:  total_count_for(@playlists),
  headline: @title
%>

<%= render "admin/shared/index",
  relation: @relation,
  relation: @relation,
  records: @playlists,
  columns: [
    { name: "ID",      method: :id             },
    { name: "Title",   method: :title          },
    { name: "Author",  method: :display_author },
  ]
%>
