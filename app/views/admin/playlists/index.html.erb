<%
  @title = "Playlists"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@playlists),
  h1: @title
) %>

<%= render "admin/shared/index",
  scopes:  @scopes,
  sorts:   @sorts,
  records: @playlists,
  columns: [
    { name: "ID",      method: :id             },
    { name: "Title",   method: :title          },
    { name: "Author",  method: :display_author },
  ]
%>
