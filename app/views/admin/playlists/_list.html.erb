<% return if playlists.empty? %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Playlists") %>
  <% end %>

  <%= content_tag(:ul, class: "square") do %>
    <% playlists.each do |playlist| %>
      <%= content_tag(:li, link_to_playlist(playlist)) %>
    <% end %>
  <% end %>
<% end %>
