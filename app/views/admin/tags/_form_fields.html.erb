<%= content_tag(:fieldset) do %>
  <%= content_tag(:div, class: "boxed") do %>
    <%= f.input :category_id,
      as:            :select,
      collection:    categories,
      required:      false,
      include_blank: :translate,
      input_html:    {
        "data-controller":              "selectable-create",
        "data-selectable-create-scope": "category",
        "data-selectable-create-url":   admin_categories_path,
        "data-selectable-create-param": "category[name]",
      }
    %>

    <%= f.input :name %>

    <%= f.input :summary, required: false, hint: true, input_html: { class: "small" } %>
  <% end %>
<% end %>
