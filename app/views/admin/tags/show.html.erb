<%
  @title = ["View Tag", @tag.name]
%>

<%= admin_header(@model_class, :show,
  h1:       @title.first,
  instance: @tag,
) %>

<%= render "admin/shared/show",
  record: @tag,
  rows: [
    { name: "ID",       method: :id },
    { name: "Name",     method: :name },
    { name: "Created",  date: true, method: :created_at },
    { name: "Updated",  date: true, method: :updated_at },
    { name: "Alpha",    method: :alpha },
  ]
%>

<%= render partial: "admin/posts/list", as: "posts", object: @tag.posts.for_admin.reverse_cron %>
