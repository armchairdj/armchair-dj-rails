<% return if tags.empty? %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Tags") %>
  <% end %>

  <%= content_tag(:ul, class: "square") do %>
    <% tags.each do |tag|
      <%= content_tag(:li, link_to_tag(tag)) %>
    <% end %>
  <% end %>
<% end %>
