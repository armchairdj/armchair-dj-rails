<%
  @title = "Tags"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@tags),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scopes) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @tags.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th @sorts, "Name"     %>
            <%= sortable_th @sorts, "Category" %>
            <%= sortable_th @sorts, "VPC",  text: vpc_icon,  class: "icon"  %>
            <%= sortable_th @sorts, "NVPC", text: nvpc_icon, class: "icon" %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @tags.each do |tag| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, tag.name            ) %>
              <%= content_tag(:td, tag.display_category) %>

              <%= content_tag(:td, tag.viewable_post_count,     class: "icon") %>
              <%= content_tag(:td, tag.unviewable_post_count, class: "icon") %>

              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_link(tag) %>
                <%= admin_view_link(      tag) %>
                <%= admin_update_link(    tag) %>
                <%= admin_destroy_link(   tag) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @tags %>
    <% end %>
  <% end %>
<% end %>
