<%= simple_form_for([:admin, @tag], html: { class: "admin"}) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:section, class: "adj-module") do %>
      <%= f.input :name %>
    <% end %>
  <% end %>

  <%= button_group submit_button(@tag) %>
<% end %>
