<%= simple_form_for([:admin, @article], html: { class: "admin"} ) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:section, class: "adj-module") do %>
      <%= content_tag(:fieldset) do %>
        <%= f.input :title, required: true %>

        <%= f.input :body, input_html: { class: "x-large" } %>

        <%= f.input :tag_ids,
          as:         :select,
          collection: @tags,
          input_html: js_selectable_create_tag_attrs
        %>
      <% end %>
    <% end %>

    <%= render partial: "admin/shared/forms/link_fieldset", locals: { f: f } %>

    <%= render partial: "admin/posts/publication_details", locals: { f: f } %>
  <% end %>

  <%= render partial: "admin/posts/buttons", locals: { f: f } %>
<% end %>
