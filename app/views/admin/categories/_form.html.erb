<%= simple_form_for([:admin, category], html: { class: "admin"}) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= render partial: "admin/categories/form_fields", locals: {
      f: f
    } %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :button, "Submit", type: :submit %>
  <% end %>
<% end %>
