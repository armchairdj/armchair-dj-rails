<%
  @title = "Categories"
%>

<%= admin_header(@model_class, :index,
  h4: total_count_for(@categories),
  h1: @title
) %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= admin_index_tabs(@scope, @model_class) %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @categories.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= sortable_th Category, "Name",   @sort %>
            <%= sortable_th Category, "Format", @sort %>
            <%= sortable_th Category, "Multi?", @sort %>

            <%= actions_th %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @categories.each do |category| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, category.name           ) %>
              <%= content_tag(:td, category.human_format   ) %>
              <%= content_tag(:td, category.allow_multiple?) %>

              <%= content_tag(:td, class: "actions") do %>
                <%= admin_view_link(   category) %>
                <%= admin_update_link( category) %>
                <%= admin_destroy_link(category) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @categories %>
    <% end %>
  <% end %>
<% end %>
