<%
  @title = "Genres"
%>

<%= render partial: "admin/shared/admin_header", locals: {
  action:   :index,
  headline: @title,
  prehead:  pluralize(@genres.total_count, "Total Record")
} %>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "admin/shared/index_tabs", locals: { model: Genre } %>

  <%= content_tag(:div, class: "tab") do %>
    <% if @genres.empty? %>
      <%= content_tag(:p, I18n.t("admin.content.no_records")) %>
    <% else %>
      <%= content_tag(:table, class: "admin admin-index") do %>
        <%= content_tag(:thead) do %>
          <%= content_tag(:tr) do %>
            <%= content_tag(:th, "Medium") %>
            <%= content_tag(:th, "Name") %>
            <%= content_tag(:th, "Actions", class: "actions") %>
          <% end %>
        <% end %>

        <%= content_tag(:tbody) do %>
          <% @genres.each do |genre| %>
            <%= content_tag(:tr) do %>
              <%= content_tag(:td, genre.medium.name) %>
              <%= content_tag(:td, genre.name) %>
              <%= content_tag(:td, class: "actions") do %>
                <%= admin_public_genre_link(genre) %>
                <%= admin_view_link(genre) %>
                <%= admin_update_link(genre) %>
                <%= admin_destroy_link(genre) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= paginate @genres %>
    <% end %>
  <% end %>
<% end %>
