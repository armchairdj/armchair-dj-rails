<%= simple_form_for(song) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>

    <%= f.input :title %>

    <%= render partial: "shared/contribution_fields", locals: {
      f:           f,
      association: :song_contributions,
      artists:     @artists_for_select,
      roles:       @roles_for_select
    } %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit %>
  <% end %>
<% end %>
