<%
  @title = mixtape_title(@mixtape)
%>

<%= content_for(:header) do %>
  <%= content_tag(:header, class: "post-header") do %>
    <%= content_tag(:h1, @mixtape.playlist.title) %>
  <% end %>
<% end %>

<%= formatted_post_body(@mixtape) %>

<%= content_tag(:footer, class: "post-byline") do %>
  Posted by <%= link_to_post_author(@mixtape) %> on <%= post_published_date(@mixtape) %>
<% end %>

<%= content_tag(:aside, class: "post-tags") do %>
  <%= render partial: "shared/playback/tags", locals: {
    tags: @mixtape.all_tags.for_site
  } %>
<% end %>

<%= render partial: "shared/playback/links", locals: {
  links: @mixtape.links
} %>
