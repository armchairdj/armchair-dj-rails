<% return if contributions.empty? %>

<%= content_tag(:section) do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, context == :work ? "Contributors" : "Contributions") %>
  <% end %>

  <%= content_tag(:dl, class: "horizontal right") do %>
    <%= render "shared/playback/contribution",
      collection: contributions,
      link_to: (context == :work ? :creator : :work)
    %>
  <% end %>
<% end %>
