<%= content_tag(:article, class: "card") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h6, post.display_type) %>
    <%= content_tag(:h3, link_to_post(post, full: true)) %>
  <% end %>

  <%= paragraphs(post.summary, link_to_post(post, text: "READ MORE", class: "read-more")) %>
<% end %>
