<% return if media.empty? %>

<%= content_tag(:section, class: "admin-section") do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h4, "Media") %>
  <% end %>

  <%= content_tag(:dl, class: "horizontal right") do %>
    <%= render partial: "admin/shared/medium", collection: media %>
    <% end %>
  <% end %>
<% end %>
