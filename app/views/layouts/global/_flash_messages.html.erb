<% return if flash.empty? %>

<%= content_tag(:aside, class: "flash-messages", data: {
  behavior: "Closeable"
}) do %>
  <% flash.each do |type, message| %>
    <%= content_tag(:div, class: "flash-#{type}") do %>
      <%= content_tag(:div, class: "constrain-wide") do %>
        <%= link_to "&#215;".html_safe, "javascript:alert('TODO');",
          class: "closeable",
          title: "dismiss this message",
          data: { closeable: "trigger" }
        %>

        <%= content_tag(:p, message) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
