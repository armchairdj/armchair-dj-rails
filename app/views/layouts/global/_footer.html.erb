<%= content_tag(:footer, id: "page-footer") do %>
  <%= content_tag(:div, class: "constrain-wide") do %>

    <%= content_tag(:nav, class: "links") do %>
      <%= content_tag(:ul, class: "piped") do %>
        <%= content_tag :li, link_to("Home", root_path) %>
        <%= content_tag :li, link_to("Artists", artists_path) %>
        <%= content_tag :li, link_to("Songs", songs_path) %>
        <%= content_tag :li, link_to("Albums", albums_path) %>
        <%= content_tag :li, link_to("Posts", posts_path) %>
      <% end %>

      <%= content_tag(:div, copyright_notice, class: "copyright") %>
    <% end %>

    <% if @homepage %>
      <%= content_tag(:span, site_logo, class: "logo") %>
    <% else %>
      <%= link_to(site_logo, root_path, title: "back to homepage", class: "logo") %>
    <% end %>

  <% end %>
<% end %>
