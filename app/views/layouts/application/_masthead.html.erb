<%= content_tag(:nav, id: "masthead") do %>
  <% if @homepage %>
    <%= content_tag(:span, site_logo, class: "logo") %>
  <% else %>
    <%= link_to(site_logo, root_path, title: "back to homepage", class: "logo") %>
  <% end %>

  <%= content_tag(:header) do %>
    <% if @homepage %>
      <%= content_tag(:h1, site_title) %>
    <% else %>
      <%= content_tag :h1, link_to(site_title, root_path, title: "back to homepage") %>
    <% end %>
    <%= content_tag(:h2) do %>
      <%= content_tag(:span, "A monologue about music,") %>
      <%= content_tag(:span, "with occasional mixtapes.") %>
    <% end %>
  <% end %>
<% end %>
