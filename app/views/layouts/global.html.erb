<%= render "layouts/global/head" %>

<body>

<%= render "layouts/global/masthead" %>

<%= content_tag(:main, role: "main") do %>
  <%= render "layouts/global/flash_messages" %>

  <%= content_tag(:div, class: "wrapper") do %>
    <%= content_tag(:div, class: "constrain") do %>
      <%= content_tag(@page_container || :article, class: @page_container_class || "") do %>
        <%= content_for_unless_empty :pre_header %>
        <%= render "layouts/global/header" %>
        <%= content_for_unless_empty :post_header %>

        <%= content_for_unless_empty :pre_main %>
        <%= yield %>
        <%= content_for_unless_empty :post_main %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render "layouts/global/footer" %>
<%= render "layouts/global/foot" %>

</body>
</html>
