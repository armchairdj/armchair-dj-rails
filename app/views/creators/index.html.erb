<%
  @headline = @title = "Creators"
%>

<% if @creators.empty? %>
  <%= content_tag(:p, "Nothing so far.") %>
<% else %>
  <%= content_tag(:dl, class: "horizontal right") do %>
    <%= render partial: "shared/playback/creator", collection: @creators, locals: {
      parent: :dl
    } %>
  <% end %>

  <%= paginate @creators %>
<% end %>
