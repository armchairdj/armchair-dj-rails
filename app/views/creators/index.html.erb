<%
  @title = "Creators"
%>

<%= content_tag(:header, class: "crud") do %>
  <%= content_tag(:h1, @title) %>

  <%= content_tag(:div, class: "actions") do %>
    <%= crud_create_link(Creator) %>
  <% end %>
<% end %>

<%= content_tag(:table, class: "crud") do %>
  <%= content_tag(:thead) do %>
    <%= content_tag(:tr) do %>
      <%= content_tag :th, "Name" %>
      <%= content_tag :th, "Works", class: "count" %>
      <%= content_tag :th, "Posts", class: "count" %>
      <%= content_tag :th, "Actions", class: "actions" %>
    <% end %>
  <% end %>
  <%= content_tag(:tbody) do %>
    <% @creators.each do |creator| %>
      <%= content_tag(:tr) do %>
        <%= content_tag :td, creator.name %>
        <%= content_tag :td, creator.work_count, class: "count" %>
        <%= content_tag :td, creator.post_count, class: "count" %>
        <%= content_tag :td, class: "actions" do %>
          <%= crud_show_link    creator %> 
          <%= crud_update_link  creator %>
          <%= crud_destroy_link creator %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= paginate @creators %>
