<%
  @title = [@user.username, "Profile"]
  @headline = @user.username

  @posts    = @user.posts.for_site
  @works    = @user.works.for_site
  @creators = @user.creators.for_site
  @bio      = @user.bio
%>

<% if @bio.present? %>
  <%= content_tag(:section, class: "bio") do %>
    <%= paragraphs(@user.bio) %>
  <% end %>
<% end %>

<% if @posts.any? %>
  <%= content_tag(:section, class: "posts") do %>
    <%= content_tag(:ul) do %>
      <%= render partial: "posts/post", collection: @posts %>
    <% end %>
  <% end %>
<% end %>

<% if @works.any? %>
  <%= content_tag(:section, class: "works") do %>
    <%= content_tag(:ul) do %>
      <%= render partial: "works/work", collection: @works %>
    <% end %>
  <% end %>
<% end %>

<% if @creators.any? %>
  <%= content_tag(:section, class: "creators") do %>
    <%= content_tag(:ul) do %>
      <%= render partial: "creators/creator", collection: @creators %>
    <% end %>
  <% end %>
<% end %>

