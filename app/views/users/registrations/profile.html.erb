<%
  @title    = [@user.username, "Profile"]
  @headline = @user.username
%>

<%# @user.display_name %>

<% if @user.bio.present? %>
  <%= content_tag(:section, class: "bio") do %>
    <%= paragraphs(@user.bio) %>
  <% end %>
<% end %>

<%= render partial: "shared/posts", locals: {
  posts: @user.posts.for_site
} %>

<%= render partial: "shared/works", locals: {
  works: @user.works.for_site
} %>

<%= render partial: "shared/creators", locals: {
  creators: @user.creators.for_site
} %>
