<% show_bio      = false unless local_assigns[:show_bio     ].present? %>
<% show_password = false unless local_assigns[:show_password].present? %>
<% show_role     = false unless local_assigns[:show_role    ].present? %>

<%= f.input(:role, as: :select, collection: User.human_roles) if show_role %>

<%= content_tag(:fieldset, class: "name legendary") do %>
  <%= content_tag(:legend, "Name") %>

  <%= f.input(:first_name,  label: "First") %>
  <%= f.input(:middle_name, label: "Middle", required: false) %>
  <%= f.input(:last_name,   label: "Last") %>
<% end %>

<%= content_tag(:fieldset) do %>
  <%= f.input(:username) %>
  <%= f.input(:email,    required: true, placeholder: "name@domain.com") %>
  <%= f.input(:password, required: true, hint: "#{@minimum_password_length} or more characters") if show_password %>
<% end %>

<%= f.input(:bio) if show_bio %>
