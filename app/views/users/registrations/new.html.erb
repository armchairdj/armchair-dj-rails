<%
  @headline = @title = "Register"
%>

<%= simple_form_for(@user, url: settings_path) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form_inputs") do %>
    <%= f.input :first_name,
      required: true
    %>

    <%= f.input :last_name,
      required: true
    %>

    <%= f.input :email,
      required: true,
      placeholder: "name@domain.com"
    %>

    <%= f.input :password,
      required: true,
      placeholder: ("#{@minimum_password_length} or more characters")
    %>
  <% end %>

  <%= content_tag(:div, class: "button_group") do %>
    <%= f.button :submit, "Sign up" %>
  <% end %>
<% end %>

<%= render "users/shared/links" %>
