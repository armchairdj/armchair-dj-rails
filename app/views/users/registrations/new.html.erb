<%
  @title = "Register"
%>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "shared/user_tabs", locals: { selected_tab: :register } %>

  <%= content_tag(:div, class: "tab") do %>
    <%= simple_form_for(@user, url: register_path) do |f| %>
      <%= f.error_notification %>

      <%= content_tag(:div, class: "form-inputs") do %>
        <%= render partial: "users/registrations/user_fields", locals: {
          f:             f,
          show_bio:      false,
          show_password: true,
          show_role:     false
        } %>
      <% end %>

      <%= content_tag(:div, class: "button-group") do %>
        <%= f.button :submit, "Register" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
