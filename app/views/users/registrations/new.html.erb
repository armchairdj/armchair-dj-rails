<%
  @title = "Register"
%>

<%= content_tag(:div, class: "tabgroup") do %>
  <%= render partial: "shared/user_tabs", locals: { selected_tab: :register } %>

  <%= content_tag(:div, class: "tab") do %>
    <%= simple_form_for(@user, url: settings_path) do |f| %>
      <%= f.error_notification %>

      <%= content_tag(:div, class: "form-inputs") do %>
        <%= f.input :first_name,
          required: true
        %>

        <%= f.input :middle_name,
          required: false
        %>

        <%= f.input :last_name,
          required: true
        %>

        <%= f.input :email,
          required:    true,
          placeholder: "name@domain.com"
        %>

        <%= f.input :password,
          required: true,
          hint:     "#{@minimum_password_length} or more characters"
        %>
      <% end %>

      <%= content_tag(:div, class: "button-group") do %>
        <%= f.button :submit, "Register" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
