<%
  @title = "Register"
%>

<%= render "users/shared/auth_tabs", selected_tab: :register do %>
  <%= simple_form_for(@user, url: register_path) do |f| %>
    <%= f.error_notification %>

    <%= form_inputs do %>
      <%= render "admin/users/form_fields",
        f:             f,
        show_bio:      false,
        show_links:    false,
        show_password: true,
        show_role:     false
      %>
    <% end %>

    <%= button_group submit_button(@user, "Register") %>
  <% end %>
<% end %>
