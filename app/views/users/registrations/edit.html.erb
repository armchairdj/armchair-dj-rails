<%
  @headline = @title = "Settings"
%>

<%= simple_form_for(@user, url: edit_user_registration_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= render partial: "users/registrations/user_fields", locals: {
      f:             f,
      show_bio:      true,
      show_password: false,
      show_role:     false
    } %>

    <%= f.input :current_password,
      required: true,
      hint: "We need your current password to confirm your changes"
    %>
  <% end %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit, "Update" %>
  <% end %>
<% end %>
