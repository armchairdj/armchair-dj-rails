<%
  @headline = @title = "Resend Unlock Instructions"
%>

<%= simple_form_for(@user, url: user_unlock_path, html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= f.input :email, required: true, placeholder: true %>
  <% end %>

  <%= button_group submit_button(@user, "Resend") %>
<% end %>
