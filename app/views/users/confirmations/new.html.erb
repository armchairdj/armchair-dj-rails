<%
  @headline = @title = "Resend Confirmation Instructions"
%>

<%= simple_form_for(@user, url: user_confirmation_path, html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <%= form_inputs do %>
    <%= f.input :email, required: true, placeholder: true %>
  <% end %>

  <%= button_group submit_button(@user, "Resend") %>
<% end %>
