<%
  @headline = @title = "Resend Confirmation Instructions"
%>

<%= simple_form_for(@user, url: user_confirmation_path, html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <%= content_tag(:div, class: "form_inputs") do %>
    <%= f.input :email, required: true, autofocus: true %>
  <% end %>

  <%= content_tag(:div, class: "button_group") do %>
    <%= f.button :submit, "Resend confirmation instructions" %>
  <% end %>
<% end %>

<%= render "users/shared/links" %>
