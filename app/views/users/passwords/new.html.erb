<%
  @headline = @title = "Forgot Your Password?"
%>

<%= simple_form_for(@user, url: user_password_path, html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= f.input :email, required: true, placeholder: "name@domain.com" %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit, "Reset Password" %>
  <% end %>
<% end %>
