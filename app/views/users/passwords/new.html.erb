<%
  @headline = @title = "Forgot Your Password?"
%>

<%= simple_form_for(@user, url: user_password_path, html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= f.input :email, required: true, placeholder: true %>
  <% end %>

  <%= button_group submit_button(@user, "Reset Password") %>
<% end %>
