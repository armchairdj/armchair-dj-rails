<%
  @headline = @title = "Change Your Password"
%>

<%= simple_form_for(@user, url: user_password_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= form_inputs do %>
    <%= f.input :password, hint: true, required: true, autocomplete: "off" %>
  <% end %>

  <%= button_group submit_button(@user, "Change Password") %>
<% end %>
