<%
  @headline = @title = 'Change Your Password'
%>

<%= simple_form_for(@user, url: user_password_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= content_tag(:div, class: 'form-inputs') do %>
    <%= f.input(:password,
      label:   'New password',
      required: true,
      hint:     "#{@minimum_password_length} characters minimum"
    ) %>
  <% end %>

  <%= content_tag(:div, class: 'button-group') do %>
    <%= f.button :submit, 'Change my password' %>
  <% end %>
<% end %>
