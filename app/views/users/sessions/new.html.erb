<%
  @headline = @title = "Log In"
%>

<% content_for(:header) do %>
  <%= content_tag(:header, class: "page-header auth") do %>
    <%= content_tag(:h1) do %>
      <%= content_tag(:span, @headline) %>
      <%= link_to("(Or Register)", new_user_registration_path) %>
    <% end %>
  <% end %>
<% end %>

<%= simple_form_for(@user, url: session_path(resource_name)) do |f| %>
  <%= content_tag(:div, class: "form-inputs") do %>
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>

    <%= render(partial: "shared/custom_checkbox", locals: {
      f:    f,
      name: :remember_me
    }) if devise_mapping.rememberable? %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit, "Log in" %>
  <% end %>

  <%= content_tag(:ul) do %>
    <%= content_tag :li, link_to("Forgot your password?", new_user_password_path) %>
    <%= content_tag :li, link_to("Didn't receive confirmation instructions?", new_user_confirmation_path) %>
  <% end %>
<% end %>
