<%
  @headline = @title = "Log In"
%>

<% content_for(:header) do %>
  <%= content_tag(:header, class: "page_header auth") do %>
    <%= content_tag(:ul, class: "piped") do %>
      <%= content_tag :li, content_tag(:h1, @headline) %>
      <%= content_tag :li, content_tag(:h2, link_to("Register", new_user_registration_path)) %>
    <% end %>
  <% end %>
<% end %>

<%= simple_form_for(@user, url: session_path(resource_name)) do |f| %>
  <%= content_tag(:div, class: "form_inputs") do %>
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  <% end %>

  <%= content_tag(:div, class: "button_group") do %>
    <%= f.button :submit, "Log in" %>
  <% end %>
<% end %>

<%= render "users/shared/links" %>
