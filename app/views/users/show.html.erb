<%
  @title    = [@user.username, "Profile"]
  @headline = @user.username
%>

<%# @user.display_name %>

<% if @user.bio.present? %>
  <%= content_tag(:section, class: "bio") do %>
    <%= paragraphs(@user.bio) %>
  <% end %>
<% end %>

<%= render "shared/playback/posts", posts: @user.posts.for_public %>

<%= render "shared/playback/links", links: @user.links %>
