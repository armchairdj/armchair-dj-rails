<%
  @headline = "Form With Errors"
  @title    = ["Style Guide", @headline]

  @page_container_class = "style-guide"
%>

<%= simple_form_for(:user, method: :get) do |f| %>
  <%= content_tag(:div, class: "error-notification") do %>
    Page-level form error notification.
  <% end %>

  <%= content_tag(:div, class: "form-inputs") do %>

    <%= content_tag(:fieldset, class: "legendary") do %>
      <%= content_tag(:legend, "Fields With Errors") %>

      <%= f.input(:string_with_error,
        wrapper_html: { class: "with-errors" },
        hint: "Hint for string."
      ) do %>
        <%= f.text_field :string_with_error, placeholder: "Placeholder for string" %>
        <%= content_tag(:div, "Error message for string.", class: "error") %>
      <% end %>

      <%= f.input :radios_with_error, label: false, as: :radio_buttons, wrapper_tag: :fieldset, wrapper_html: { class: "with-errors" } do |b| %>
        <%= content_tag(:legend, class: "label") do %>
          Radios <%= I18n.t("simple_form.required.html").html_safe %>
        <% end %>

        <%= f.collection_radio_buttons :radios, [[1, "one"], [2, "two"], [3, "three"]], :first, :last, item_wrapper_tag: :div, item_wrapper_class: "collection-item" do |b| %>
          <%= b.label do %>
            <%= b.radio_button %>
            <%= content_tag(:span, "&nbsp;".html_safe, class: "custom-boolean") %>
            <%= content_tag(:span, b.text, class: "label-text") %> 
          <% end  %>
        <% end %>

        <%= content_tag(:div, "Error message for radios.", class: "error") %>
      <% end %>

      <%= f.input(:select_with_error,
        wrapper_html: { class: "with-errors" },
        hint: "Hint for select."
      ) do %>
        <%= f.select :select,
          [true, false],
          include_blank: "Please choose"
        %>
        <%= content_tag(:div, "Error message for select.", class: "error") %>
      <% end %>

      <%= f.input(:checkbox_with_error,
        label: false,
        wrapper_html: { class: "boolean with-errors" }
      ) do %>
        <%= content_tag(:label) do %>
          <%= f.check_box(:checkbox_with_error) %>
          <%= content_tag(:span, "&nbsp;".html_safe, class: "custom-boolean") %>
          <%= content_tag(:span, "Checkbox with error", class: "label-text") %>
          <%= content_tag(:div, "Error message for checkbox.", class: "error") %>
        <% end %>
      <% end %>

      <%= f.input(:textarea_with_error,
        wrapper_html: { class: "with-errors" },
        hint: "Hint for textarea."
      ) do %>
        <%= f.text_area :textarea_with_error, placeholder: "Placeholder for textarea" %>
        <%= content_tag(:div, "Error message for textarea.", class: "error") %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit %>
  <% end %>
<% end %>
