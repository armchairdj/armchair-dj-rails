  <%
    @headline = "Buttons"
    @title    = ["Style Guide", @headline]

    @page_container_class = "style-guide"
  %>

<%= simple_form_for(:user, method: :get, url: "/") do |f| %>
  <%= content_tag(:section) do %>
    <%= content_tag(:header) do %>
      <%= content_tag(:h3, "Primary Buttons") %>
    <% end %>

    <%= button_group do %>
      <%= f.button :submit, "Submit Input" %>
    <% end %>

    <%= button_group do %>
      <%= f.button :button, "Submit Button", type: :submit %>
    <% end %>

    <%= button_group do %>
      <%= f.button :button, "Plain Button", type: :button %>
    <% end %>

    <%= button_group do %>
      <%= link_to("Button Link", posts_path, class: "button") %>
    <% end %>
  <% end %>

