<%
  @headline = "Form"
  @title    = ["Style Guide", @headline]

  @page_container_class = "style-guide"
%>

<%= simple_form_for(:user, method: :get) do |f| %>
  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:fieldset, class: "legendary") do %>
      <%= content_tag(:legend, "Plain Fields") %>

      <%= f.input :string, as: :string %>

      <%= f.input :radios, label: false, as: :radio_buttons, wrapper_tag: :fieldset, wrapper_class: 'form-field radio-buttons' do |b| %>
        <%= content_tag(:legend, class: "label") do %>
          Radios <%= I18n.t("simple_form.required.html").html_safe %>
        <% end %>

        <%= f.collection_radio_buttons :radios, [[1, "one"], [2, "two"], [3, "three"]], :first, :last, item_wrapper_tag: :div, item_wrapper_class: "collection-item" do |b| %>
          <%= b.label do %>
            <%= b.radio_button %>
            <%= content_tag(:span, "&nbsp;".html_safe, class: "custom-boolean") %>
            <%= content_tag(:span, b.text, class: "label-text") %> 
          <% end  %>
        <% end %>
      <% end %>

      <%= f.input :select do %>
        <%= f.select :select,
          [true, false],
          include_blank: "Please choose"
        %>
      <% end %>

      <%= f.input :checkbox, as: :boolean, hint: "&nbsp;".html_safe %>

      <%= f.input :textarea, as: :text %>
    <% end %>

    <%= content_tag(:fieldset, class: "legendary") do %>
      <%= content_tag(:legend, "Optional Fields") %>

      <%= f.input :optional_string, as: :string, required: false %>

      <%= f.input :optional_select, required: false do %>
        <%= f.select :optional_select,
          [true, false],
          include_blank: "Please choose"
        %>
      <% end %>

      <%= f.input :optional_textarea, as: :text, required: false %>
    <% end %>

    <%= content_tag(:fieldset, class: "legendary") do %>
      <%= content_tag(:legend, "Tricked-Out Fields") %>

      <%= f.input :string_with_extras, as: :string,
        placeholder: "Placeholder for string",
        hint:        "Hint for string."
      %>

      <%= f.input(:select_with_extras_and_no_blank,
        hint: "Hint for select."
      ) do %>
        <%= f.select :select_with_extras_and_no_blank,
          [true, false],
          include_blank: false
        %>
      <% end %>

      <%= f.input :textarea_with_extras, as: :text,
        placeholder: "Placeholder for textarea",
        hint:        "Hint for textarea."
      %>
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit %>
  <% end %>
<% end %>
