    <%= content_tag(:li, link_to("Success",         style_guides_flash_success_path)) %>
  <% end %>
<% end %>

<%= content_tag(:section) do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h3, "Error Pages") %>
  <% end %>

  <%= content_tag(:ul, class: "bulleted") do %>
    <%= content_tag(:li, link_to("500",             style_guides_internal_server_error_path)) %>
    <%= content_tag(:li, link_to("404",             style_guides_not_found_path)) %>
    <%= content_tag(:li, link_to("403",             style_guides_permission_denied_path)) %>
  <% end %>
<% end %>
