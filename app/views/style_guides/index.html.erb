<%
  @headline = @title = "Style Guide"

  @page_container_class = "style-guide"
%>

<%= content_tag(:section) do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h3, "General") %>
  <% end %>

  <%= content_tag(:ul, class: "bulleted") do %>
    <%= content_tag(:li, link_to("Lists",           style_guides_list_path)) %>
    <%= content_tag(:li, link_to("Posts",           style_guides_post_path)) %>
  <% end %>
<% end %>

<%= content_tag(:section) do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h3, "Forms") %>
  <% end %>

  <%= content_tag(:ul, class: "bulleted") do %>
    <%= content_tag(:li, link_to("Buttons",         style_guides_button_path)) %>
    <%= content_tag(:li, link_to("Form",            style_guides_form_path)) %>
    <%= content_tag(:li, link_to("Form w/ Errors",  style_guides_form_with_errors_path)) %>
  <% end %>
<% end %>

<%= content_tag(:section) do %>
  <%= content_tag(:header) do %>
    <%= content_tag(:h3, "Flash Messages") %>
  <% end %>

  <%= content_tag(:ul, class: "bulleted") do %>
    <%= content_tag(:li, link_to("Alert",           style_guides_flash_alert_path)) %>
    <%= content_tag(:li, link_to("Error",           style_guides_flash_error_path)) %>
    <%= content_tag(:li, link_to("Info",            style_guides_flash_info_path)) %>
