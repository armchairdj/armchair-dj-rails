<%
  @headline = "Grid"
  @title    = ["Style Guide", @headline]

  @page_container_class = "style-guide"
%>

<%= content_tag(:div, class: "admin-grid") do %>
  <%= content_tag(:div, class: "admin-grid-head") do %>
    <%= content_tag(:div, class: "admin-grid-row") do %>
      <%= content_tag(:div, "head", class: "admin-grid-col") %> 
      <%= content_tag(:div, "head", class: "admin-grid-col") %> 
      <%= content_tag(:div, "head", class: "admin-grid-col") %> 
      <%= content_tag(:div, "head", class: "admin-grid-col") %> 
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "admin-grid-body") do %>
    <%= content_tag(:div, class: "admin-grid-row") do %>
      <%= content_tag(:div, "col", class: "admin-grid-col") %> 
      <%= content_tag(:div, "col", class: "admin-grid-col") %> 
      <%= content_tag(:div, "col", class: "admin-grid-col") %> 
      <%= content_tag(:div, "col", class: "admin-grid-col") %> 
    <% end %>
  <% end %>
<% end %>
