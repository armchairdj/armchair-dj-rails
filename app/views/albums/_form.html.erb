<%
  fieldset_classes = [
    "legendary",
    "fields_for",
    ("fieldset-with-errors" if @album.errors[:album_contributions].any?)
  ].flatten.join(" ")
%>

<%= simple_form_for(album) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>

    <%= f.input :title %>

    <%= content_tag(:fieldset, class: fieldset_classes) do %>
      <%= content_tag(:legend) do %>
        Artists
        <%= I18n.t("simple_form.required.html").html_safe %>
      <% end %>

      <%= content_tag(:div, class: "hint") do %>
        Please choose at least one credited artist.
      <% end %>

      <% @album.album_contributions.each do |contribution| %>
        <%= f.simple_fields_for :album_contributions, contribution do |ff| %>
          <%= ff.input :artist_id, as: :select,
            collection: @artists_for_select,
            required: false,
            include_blank: "Please choose"
          %>

          <%= ff.input :role, as: :select,
            collection: AlbumContribution.human_enum_collection(:role),
            required: false,
            include_blank: "Please choose"
          %>
        <% end %>
      <% end %>

      <%= f.error :album_contributions %>
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit %>
  <% end %>
<% end %>
