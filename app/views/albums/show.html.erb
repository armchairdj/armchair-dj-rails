<%
  @title = @album.display_name_with_artist
%>

<% content_for(:page_header) do %>
  <%= content_tag(:header, class: "page-header work") do %>
    <%= link_to("Edit", edit_album_path(@album), class: "crud") %>
    <%= link_to("Destroy", album_path(@album), method: :delete, class: "crud", "data-confirm": "Are you sure?") %>

    <%= content_tag(:h2, @album.display_artist) %>
    <%= content_tag(:h1, @album.title) %>
  <% end %>
<% end %>
