<%= simple_form_for(post) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= content_tag(:fieldset, class: "compact legendary") do %>
      <%= content_tag(:legend) do %>
        Work or Title <%= required_indicator %>
      <% end %>

      <%= content_tag(:div, class: "hint") do %>
        Please choose one or the other.
      <% end %>

      <%= f.input :title, required: false %>

      <%= f.input :work, as: :grouped_select,
        collection:         Work.grouped_select_options_for_post,
        required:           false,
        group_label_method: :first,
        group_method:       :last,
        label_method:       :display_name_with_creator,
        value_method:       :id,
        include_blank:      true
      %>

      <%#= f.simple_fields_for association, contribution do |ff| %>
        <%#= content_tag(:fieldset, class: "contribution") do %>




    <% end %>

    <%= f.input :body %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit %>
  <% end %>
<% end %>
