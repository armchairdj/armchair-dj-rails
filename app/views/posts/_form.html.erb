<%= simple_form_for(post) do |f| %>
  <%= f.error_notification %>

  <%= content_tag(:div, class: "form-inputs") do %>
    <%= f.grouped_collection_select :postable_gid,
      [Song, Album],
      :all,
      :model_name,
      :to_global_id,
      :postable_dropdown_option,
      include_blank: "Please choose"
    %>
    <%= f.input :title %>
    <%= f.input :body %>
  <% end %>

  <%= content_tag(:div, class: "button-group") do %>
    <%= f.button :submit %>
  <% end %>
<% end %>
