<%
  @title = @post.one_line_title
%>

<% content_for(:page_header) do %>
  <%= content_tag(:header, class: "page-header work") do %>
    <%= link_to("Edit", edit_post_path(@post), class: "crud") %>
    <%= link_to("Destroy", post_path(@post), method: :delete, class: "crud", "data-confirm": "Are you sure?") %>

    <% if @post.work %>
      <%= content_tag(:h2, @post.work.display_creator) %>
      <%= content_tag(:h1, @post.work.title) %>
    <% else %>
      <%= content_tag(:h1, @post.title) %>
    <% end %>
  <% end %>
<% end %>

<%= @post.body %>
