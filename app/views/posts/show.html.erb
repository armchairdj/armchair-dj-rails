<%
  @title = [@post.display_type, @post.display_type].compact
%>

<%= content_for(:header) do %>
  <%= content_tag(:header, class: "post-header") do %>
    <% if @post.standalone? %>
      <%= content_tag(:h1, @post.title) %>
    <% else %>
      <%= content_tag(:h3, @post.display_type) %>
      <%= content_tag(:h1) do %>
        <%= content_tag(:span, @post.work.display_creator, class: "creators") %>
        <%= content_tag(:span, @post.work.title,           class: "title"   ) %>
        <%= content_tag(:span, @post.work.subtitle,        class: "subtitle") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= formatted_post_body(@post) %>

<%= content_tag(:footer, class: "post-byline") do %>
  Posted by <%= post_byline_link(@post) %> on <%= post_published_date(@post) %>
<% end %>
