<%
  @title = [@post.type, post_title(@post)].compact
%>

<%= content_for(:header) do %>
  <%= content_tag(:header, class: "post-header") do %>
    <% if @post.standalone? %>
      <%= content_tag(:h1, @post.title) %>
    <% else %>
      <%= content_tag(:h3, @post.type) %>
      <%= content_tag(:h1) do %>
        <%= content_tag(:span, @post.work.display_creators, class: "creators") %>
        <%= content_tag(:span, @post.work.title,           class: "title"   ) %>
        <%= content_tag(:span, @post.work.subtitle,        class: "subtitle") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= formatted_post_body(@post) %>

<%= content_tag(:footer, class: "post-byline") do %>
  Posted by <%= link_to_post_author(@post) %> on <%= post_published_date(@post) %>
<% end %>

<%= content_tag(:aside, class: "post-tags") do %>
  <%= render partial: "shared/playback/tags", locals: {
    tags: @post.all_tags.for_site
  } %>
<% end %>

<%= render partial: "shared/playback/links", locals: {
  links: @post.links
} %>
