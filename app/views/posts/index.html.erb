<%
  @headline = @title = "Posts"
%>

<% if @posts.empty? %>
  <%= content_tag(:p, "Nothing so far.") %>
<% else %>
  <%= content_tag(:ul, class: "bulleted") do %>
    <% @posts.each do |post| %>
      <%= content_tag(:li, link_to_post(post)) %>
    <% end %>
  <% end %>

  <%= paginate @posts %>
<% end %>
