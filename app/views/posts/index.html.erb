<%
  @headline = @title = "Posts"
%>

<% content_for(:before_page_headline) do %>
  <%= link_to("New", new_post_path, class: "crud") %>
<% end %>

<%= content_tag(:table) do %>
  <%= content_tag(:thead) do %>
    <%= content_tag(:tr) do %>
      <%= content_tag :th, "Name" %>
    <% end %>
  <% end %>
  <%= content_tag(:tbody) do %>
    <% @posts.each do |post| %>
      <%= content_tag(:tr) do %>
        <%= content_tag :td, link_to_post(post) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
