<%
  @title = "Posts"
%>

<%= content_tag(:header, class: "crud") do %>
  <%= content_tag(:h1, @title) %>

  <%= crud_create_link(Post) %>
<% end %>

<%= content_tag(:table, class: "crud") do %>
  <%= content_tag(:thead) do %>
    <%= content_tag(:tr) do %>
      <%= content_tag :th, "Type" %>
      <%= content_tag :th, "Name" %>
      <%= content_tag :th, "Actions", class: "actions" %>
    <% end %>
  <% end %>
  <%= content_tag(:tbody) do %>
    <% @posts.each do |post| %>
      <%= content_tag(:tr) do %>
        <%= content_tag :td, post_type(post) %>
        <%= content_tag :td, post.work.title_with_creator %>
        <%= content_tag :td, class: "actions" do %>
          <%= crud_show_link    post %> 
          <%= crud_update_link  post %>
          <%= crud_destroy_link post %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= paginate @posts %>
