<%= content_for(:public_header) do %>
  <%= content_tag(:header, class: "post-header") do %>
    <%= content_tag(:h1, @article.title) %>
  <% end %>
<% end %>

<%= content_tag(:div, class: "post-wrapper") do %>
  <%= content_tag(:div, class: "post-content") do %>
    <%= post_body @article %>

    <%= content_tag(:footer, class: "post-byline") do %>
      Posted by <%= link_to_author_of(@article) %> on <%= post_published_date(@article) %>
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "post-extras") do %>
    <%= render "shared/playback/tags", tags: @article.tags %>

    <%= render "shared/playback/links", links: @article.links %>
  <% end %>
<% end %>
